{% extends 'base.html.twig' %}

{% block title %}Modifier la Classe - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
</style>
{% endblock %}

{% block body %}
<div class="min-h-[calc(100vh-5rem)] bg-slate-50 text-[#0F172A] relative font-sans flex flex-col p-4 md:p-8 overflow-y-auto">
    
    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto w-full z-10">
        <!-- Header Section -->
        <div class="mb-8 animate-fade-up">
            <a href="{{ path('admin_classe_index') }}" class="inline-flex items-center gap-2 text-slate-400 hover:text-[#3A86FF] transition-colors mb-4 text-xs font-bold uppercase tracking-wide group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour à la liste
            </a>

            <div class="flex items-center gap-6">
                <div class="w-16 h-16 rounded-2xl bg-[#0F172A] text-white flex items-center justify-center shadow-lg border-2 border-white/50">
                    <i class="fa-solid fa-pen-to-square text-xl"></i>
                </div>
                
                <div>
                    <h1 class="text-3xl md:text-4xl font-heading font-black text-[#0F172A] tracking-tight leading-none mb-1">
                        Modifier Classe
                    </h1>
                    <p class="text-sm font-medium text-slate-500 uppercase tracking-widest">{{ classe.name }}</p>
                </div>
            </div>
        </div>

        <!-- Form Card -->
        <div class="animate-fade-up" style="animation-delay: 100ms;">
            {{ form_start(form, {'attr': {'class': 'bg-white rounded-[2.5rem] shadow-[0_20px_40px_-10px_rgba(15,23,42,0.05)] border border-slate-100 p-8 md:p-10 space-y-8 relative overflow-hidden'}}) }}
                
                <!-- Decorative Top Border -->
                <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-[#D97706] via-[#3A86FF] to-[#D97706]"></div>

                <!-- 3-COLUMN LAYOUT -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
                    
                    <!-- COLUMN 1: INFORMATIONS GÉNÉRALES -->
                    <div class="space-y-5">
                        <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-6 flex items-center gap-3 pb-2 border-b border-slate-100">
                            Informations Générales
                        </h3>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Nom de la Classe</label>
                            {{ form_widget(form.name, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3 text-sm font-black text-[#0F172A]'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Année Universitaire</label>
                            {{ form_widget(form.academicYear, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                            {{ form_errors(form.academicYear) }}
                        </div>
                    </div>

                    <!-- COLUMN 2: CURSUS & NIVEAU -->
                    <div class="space-y-5 lg:border-l lg:border-slate-100 lg:pl-10">
                        <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-6 flex items-center gap-3 pb-2 border-b border-slate-100">
                            Cursus & Niveau
                        </h3>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Filière</label>
                            {{ form_widget(form.field, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                            {{ form_errors(form.field) }}
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Niveau</label>
                            {{ form_widget(form.level, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                            {{ form_errors(form.level) }}
                        </div>
                    </div>

                    <!-- COLUMN 3: GESTION & CAPACITÉ -->
                    <div class="space-y-5 lg:border-l lg:border-slate-100 lg:pl-10">
                        <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-6 flex items-center gap-3 pb-2 border-b border-slate-100">
                            Gestion & Capacité
                        </h3>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Capacité Maximale</label>
                            {{ form_widget(form.maxCapacity, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                            {{ form_errors(form.maxCapacity) }}
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Responsable Pédagogique</label>
                            {{ form_widget(form.supervisor, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                            {{ form_errors(form.supervisor) }}
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="pt-8 flex items-center justify-end gap-4 border-t border-slate-50 mt-4">
                    <a href="{{ path('admin_classe_index') }}" class="px-8 py-3.5 rounded-xl text-slate-500 font-bold hover:text-[#0F172A] hover:bg-slate-50 transition-all text-sm border-2 border-transparent hover:border-slate-100">
                        Annuler
                    </a>
                    <button type="submit" class="bg-[#3A86FF] hover:bg-blue-600 text-white px-10 py-3.5 rounded-xl font-bold shadow-lg shadow-blue-500/20 transition-all hover:-translate-y-0.5 text-sm flex items-center gap-2">
                        <i class="fa-solid fa-cloud-arrow-up text-white/90"></i>
                        Enregistrer les modifications
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}