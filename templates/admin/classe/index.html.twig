{% extends 'base.html.twig' %}

{% block title %}Gestion des Classes - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .custom-scroll::-webkit-scrollbar { width: 6px; height: 6px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
    
    .classe-row {
        transition: transform 0.2s, background-color 0.2s, box-shadow 0.2s;
    }
    .classe-row:hover {
        transform: scale-[1.002];
        z-index: 10;
        box-shadow: 0 4px 20px -5px rgba(0,0,0,0.05);
    }
</style>
{% endblock %}

{% block body %}
<div class="h-[calc(100vh-80px)] bg-slate-50 text-[#0F172A] overflow-hidden relative font-sans flex flex-col p-4 md:p-6">
    
    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#0F172A]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- 1. Header Section (Fixed Height) -->
    <div class="flex-none mb-6 animate-fade-up z-10">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-end gap-6">
            <div>
                <span class="text-[#D97706] font-bold tracking-widest uppercase text-xs mb-2 block flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-[#D97706] animate-pulse"></span>
                    Académique
                </span>
                <h1 class="text-4xl font-heading font-black text-[#0F172A] tracking-tight leading-none">
                    Gestion des Classes
                </h1>
            </div>

            <div class="flex flex-col md:flex-row items-center gap-4 w-full md:w-auto">
                <!-- Search Form -->
                <form method="get" class="relative group w-full md:w-80">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i class="fas fa-search text-slate-400 group-focus-within:text-[#D97706] transition-colors"></i>
                    </div>
                    <input type="text" name="search" value="{{ search|default('') }}" placeholder="Nom, Filière, Niveau..." 
                           class="w-full pl-11 pr-4 py-3 rounded-2xl border border-slate-200 bg-white/80 backdrop-blur-sm focus:ring-2 focus:ring-[#D97706]/20 focus:border-[#D97706] transition-all shadow-sm text-sm font-medium placeholder-slate-400 text-[#0F172A]">
                    {% if search %}
                        <a href="{{ path('admin_classe_index') }}" class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-400 hover:text-rose-500 transition-colors">
                            <i class="fas fa-times-circle"></i>
                        </a>
                    {% endif %}
                </form>

                <a href="{{ path('admin_classe_new') }}" 
                   class="w-full md:w-auto bg-[#0F172A] hover:bg-black text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-slate-900/10 transition-all flex items-center justify-center gap-2 text-sm hover:-translate-y-0.5">
                    <i class="fa-solid fa-plus bg-white/10 rounded-lg p-1.5 text-[10px]"></i>
                    <span>Nouvelle Classe</span>
                </a>
            </div>
        </div>
    </div>

    <!-- 2. Table Container -->
    <div class="flex-1 min-h-0 max-w-7xl mx-auto w-full relative z-10 animate-fade-up pb-2" style="animation-delay: 100ms;">
        
        <div class="h-full bg-white rounded-[2.5rem] shadow-[0_20px_60px_-15px_rgba(15,23,42,0.15)] border border-slate-100 overflow-hidden flex flex-col">
            
            <div class="flex-1 overflow-auto custom-scroll">
                <table class="w-full text-left border-collapse">
                    
                    <thead class="sticky top-0 z-20">
                        <tr class="bg-slate-50/95 backdrop-blur-md border-b border-slate-100 shadow-sm">
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest">Classe</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest">Filière / Niveau</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest text-center">Remplissage</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest">Responsable</th>
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest text-right">Actions</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-50">
                        {% for classe in classes %}
                        <tr class="classe-row group hover:bg-slate-50/50 transition-all duration-200">
                            <td class="py-4 px-8">
                                <div class="flex items-center gap-4">
                                    <div class="w-11 h-11 rounded-xl bg-[#0F172A] text-white flex items-center justify-center font-heading font-bold text-xs shadow-md group-hover:bg-[#D97706] group-hover:scale-110 transition-all duration-300">
                                        {{ classe.name|slice(0, 2)|upper }}
                                    </div>
                                    <div>
                                        <div class="font-bold text-[#0F172A] text-base group-hover:text-[#D97706] transition-colors leading-tight">
                                            {{ classe.name }}
                                        </div>
                                        <div class="text-[10px] font-bold text-slate-400 uppercase tracking-wide mt-0.5">Année: {{ classe.academicYear }}</div>
                                    </div>
                                </div>
                            </td>

                            <td class="py-4 px-6">
                                <div class="flex flex-col gap-1">
                                    <span class="font-bold text-slate-600 text-sm">{{ classe.field }}</span>
                                    <span class="inline-flex self-start px-2 py-0.5 rounded bg-slate-100 text-[#0F172A] text-[9px] font-black uppercase tracking-wider">
                                        {{ classe.level }}
                                    </span>
                                </div>
                            </td>

                            <td class="py-4 px-6">
                                <div class="flex flex-col items-center gap-2">
                                    <div class="w-32 h-2.5 bg-slate-100 rounded-full overflow-hidden shadow-inner border border-slate-100">
                                        {% set percentage = (classe.studentCount / classe.maxCapacity * 100)|round %}
                                        <div class="h-full bg-gradient-to-r from-[#D97706] to-[#F59E0B] transition-all duration-1000" style="width: {{ percentage }}%"></div>
                                    </div>
                                    <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest">
                                        {{ classe.studentCount }} / {{ classe.maxCapacity }}
                                        <span class="ml-1 text-slate-300">|</span>
                                        <span class="ml-1 {{ percentage > 90 ? 'text-rose-500' : 'text-[#D97706]' }}">{{ percentage }}%</span>
                                    </span>
                                </div>
                            </td>

                            <td class="py-4 px-6">
                                {% if classe.supervisor %}
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-lg bg-slate-100 text-slate-600 flex items-center justify-center font-bold text-[10px]">
                                            {{ classe.supervisor.firstName|first }}{{ classe.supervisor.lastName|first }}
                                        </div>
                                        <span class="text-xs font-bold text-slate-600 whitespace-nowrap">{{ classe.supervisor.fullName }}</span>
                                    </div>
                                {% else %}
                                    <span class="text-[10px] font-black text-slate-300 uppercase italic tracking-widest">Non assigné</span>
                                {% endif %}
                            </td>

                            <td class="py-4 px-8 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="{{ path('admin_classe_show', {id: classe.id}) }}" class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-50 text-slate-400 hover:bg-[#D97706]/10 hover:text-[#D97706] transition-all" title="Voir">
                                        <i class="fa-solid fa-eye text-sm"></i>
                                    </a>
                                    <a href="{{ path('admin_classe_edit', {id: classe.id}) }}" class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-50 text-slate-400 hover:bg-amber-500/10 hover:text-amber-600 transition-all" title="Modifier">
                                        <i class="fa-solid fa-pen-to-square text-sm"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_classe_delete', {id: classe.id}) }}" class="inline" onsubmit="return confirm('Supprimer cette classe ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classe.id) }}">
                                        <button type="submit" class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-50 text-slate-400 hover:bg-rose-500/10 hover:text-rose-600 transition-all" title="Supprimer">
                                            <i class="fa-solid fa-trash-can text-sm"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="py-20 text-center">
                                <div class="flex flex-col items-center justify-center opacity-60">
                                    <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mb-4 text-slate-300 text-3xl">
                                        <i class="fas fa-school"></i>
                                    </div>
                                    <h3 class="text-xl font-heading font-bold text-[#0F172A] mb-2">Aucune classe</h3>
                                    <p class="text-slate-500 max-w-md text-sm">
                                        Aucun résultat ne correspond à votre recherche.
                                    </p>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Table Footer -->
            <div class="flex-none bg-slate-50 border-t border-slate-100 px-8 py-4 flex justify-between items-center text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">
                <div class="flex gap-6">
                    <span>Total: {{ classes|length }} Classes</span>
                    <span>Capacité Totale: {{ classes|reduce((carry, c) => carry + c.maxCapacity) }}</span>
                </div>
                <span>CampusFlow Administration</span>
            </div>
        </div>
    </div>
</div>
{% endblock %}

