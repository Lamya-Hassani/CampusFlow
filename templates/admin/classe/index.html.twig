{% extends 'base.html.twig' %}

{% block title %}Gestion des Classes - CampusFlow{% endblock %}

{% block body %}
<div class="px-4 py-6 sm:px-0">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Gestion des Classes</h1>
        <a href="{{ path('admin_classe_new') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded">
            + Nouvelle classe
        </a>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nom</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Niveau</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Filière</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Étudiants</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Capacité</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for classe in classes %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ classe.name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ classe.level }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ classe.field }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ classe.studentCount }}/{{ classe.maxCapacity }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ classe.maxCapacity }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{{ path('admin_classe_show', {id: classe.id}) }}" class="text-indigo-600 hover:text-indigo-900 mr-3">Voir</a>
                        <a href="{{ path('admin_classe_edit', {id: classe.id}) }}" class="text-yellow-600 hover:text-yellow-900 mr-3">Modifier</a>
                        <form method="post" action="{{ path('admin_classe_delete', {id: classe.id}) }}" class="inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette classe ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classe.id) }}">
                            <button type="submit" class="text-red-600 hover:text-red-900">Supprimer</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

