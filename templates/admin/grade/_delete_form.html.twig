<form method="post" action="{{ path('admin_grades_delete', {id: grade.id}) }}" class="inline" onsubmit="event.preventDefault(); window.showConfirm('Êtes-vous sûr de vouloir supprimer cette note ?', () => this.submit());">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ grade.id) }}">
    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
        Supprimer
    </button>
</form>
