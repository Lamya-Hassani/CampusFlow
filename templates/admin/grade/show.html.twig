{% extends 'base.html.twig' %}

{% block title %}Détails de la Note - CampusFlow{% endblock %}

{% block body %}
<div class="px-4 py-6 sm:px-0">
    <div class="mb-6">
        <a href="{{ path('admin_grades_index') }}" class="text-indigo-600 hover:text-indigo-900">← Retour</a>
    </div>
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Note de {{ grade.student.fullName }} en {{ grade.subject.name }}</h1>

    <div class="bg-white shadow rounded-lg p-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <dt class="font-medium text-gray-500">Valeur</dt>
                <dd class="text-2xl font-bold text-gray-900">{{ grade.value }}/20</dd>
            </div>
            <div>
                <dt class="font-medium text-gray-500">Type</dt>
                <dd>
                    <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full 
                        {% if grade.type == 'exam' %}bg-purple-100 text-purple-800
                        {% elseif grade.type == 'tp' %}bg-green-100 text-green-800
                        {% else %}bg-blue-100 text-blue-800{% endif %}">
                        {{ grade.type|capitalize }}
                    </span>
                </dd>
            </div>
            <div>
                <dt class="font-medium text-gray-500">Semestre</dt>
                <dd class="text-lg">{{ grade.semester }}</dd>
            </div>
            <div>
                <dt class="font-medium text-gray-500">Date de création</dt>
                <dd class="text-lg">{{ grade.createdAt|date('d/m/Y à H:i') }}</dd>
            </div>
        </dl>

        <div class="mt-8 flex space-x-4">
            <a href="{{ path('admin_grades_edit', {id: grade.id}) }}" class="bg-yellow-600 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">
                Modifier
            </a>
            {{ include('admin/grade/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
