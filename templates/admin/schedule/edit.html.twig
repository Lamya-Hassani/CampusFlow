{% extends 'base.html.twig' %}

{% block title %}Modifier Créneau - CampusFlow{% endblock %}

{% block body %}
<div class="max-w-xl mx-auto py-12 px-4 animate-fade-in-up">
    
    <!-- Header -->
    <div class="mb-8 flex items-center gap-4">
        <a href="{{ path('admin_schedule_index') }}" class="w-10 h-10 rounded-xl bg-white border border-slate-100 flex items-center justify-center text-slate-400 hover:text-blue-600 hover:border-blue-100 transition-all shadow-sm group">
            <i class="fa-solid fa-arrow-left group-hover:-translate-x-0.5 transition-transform"></i>
        </a>
        <div>
            <h1 class="text-2xl font-black text-[#0F172A]">Modifier le créneau</h1>
            <p class="text-xs text-slate-500 font-medium">Mise à jour de la session de cours</p>
        </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-200 overflow-hidden">
        {{ form_start(schedule_form, {attr: {class: 'px-8 pt-8 pb-10', 'data-turbo': 'false'}}) }}
            <div class="grid grid-cols-2 gap-x-6 gap-y-5">
                
                <div class="col-span-2">
                    <label class="block text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5 ml-1">Matière</label>
                    {{ form_widget(schedule_form.subject, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                    {{ form_errors(schedule_form.subject) }}
                </div>
                <div class="col-span-2">
                    <label class="block text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5 ml-1">Enseignant</label>
                    {{ form_widget(schedule_form.teacher, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3 text-sm font-medium text-[#0F172A]'}}) }}
                    {{ form_errors(schedule_form.teacher) }}
                </div>
                
                <div class="col-span-1">
                    <label class="block text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5 ml-1">Jour</label>
                    {{ form_widget(schedule_form.dayOfWeek, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 p-3 text-sm focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 focus:bg-white transition-all'}}) }}
                </div>
                <div class="col-span-1">
                    <label class="block text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5 ml-1">Type</label>
                    {{ form_widget(schedule_form.courseType, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 p-3 text-sm focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 focus:bg-white transition-all'}}) }}
                </div>
                
                <div class="col-span-1">
                    <label class="block text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5 ml-1">Heure Début</label>
                    {{ form_widget(schedule_form.startTime, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 p-3 text-sm font-mono focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all'}}) }}
                </div>
                <div class="col-span-1">
                    <label class="block text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5 ml-1">Heure Fin</label>
                    {{ form_widget(schedule_form.endTime, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 p-3 text-sm font-mono focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all'}}) }}
                </div>
                
                <div class="col-span-1">
                    <label class="block text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5 ml-1">Salle</label>
                    {{ form_widget(schedule_form.room, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 p-3 text-sm placeholder:text-slate-300 font-bold focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all'}}) }}
                </div>
                <div class="col-span-1">
                    <label class="block text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5 ml-1">Semestre</label>
                    {{ form_widget(schedule_form.semester, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 p-3 text-sm focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all'}}) }}
                </div>
                
                <div class="col-span-2">
                    <label class="block text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1.5 ml-1">Classe</label>
                    {{ form_widget(schedule_form.classe, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 p-3 text-sm focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all'}}) }}
                </div>
            </div>
            
            <!-- Actions -->
            <div class="flex items-center justify-end gap-3 pt-8 mt-4 border-t border-slate-50">
                <a href="{{ path('admin_schedule_index') }}" class="px-6 py-2.5 rounded-xl text-slate-500 font-bold hover:text-[#0F172A] hover:bg-slate-50 transition-all text-sm">
                    Annuler
                </a>
                <button type="submit" class="bg-[#3A86FF] hover:bg-blue-600 text-white px-8 py-2.5 rounded-xl font-bold shadow-lg shadow-blue-500/20 transition-all hover:-translate-y-0.5 text-sm flex items-center justify-center gap-2 min-w-[140px]">
                    <i class="fa-solid fa-check"></i> Enregistrer
                </button>
            </div>
        {{ form_end(schedule_form) }}
    </div>

    <!-- Delete Section -->
    <div class="mt-6 flex justify-center">
        <form method="post" action="{{ path('admin_schedule_delete', {'id': schedule.id}) }}" data-turbo="false" onsubmit="event.preventDefault(); window.showConfirm('Supprimer ce créneau ?', () => this.submit());">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ schedule.id) }}">
            <button class="text-xs font-bold text-rose-400 hover:text-rose-600 transition-colors uppercase tracking-widest flex items-center gap-2 px-4 py-2 hover:bg-rose-50 rounded-lg">
                <i class="fa-solid fa-trash-can text-[10px]"></i> Supprimer définitivement
            </button>
        </form>
    </div>
</div>
{% endblock %}
