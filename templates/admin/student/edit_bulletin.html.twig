{% extends 'base.html.twig' %}

{% block title %}
  Bulletin de Notes - {{ student.fullName }} - Semestre {{ semester }}
{% endblock %}

{% block body %}
  <div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg print:shadow-none" id="bulletin">
    <!-- Header -->
    <div class="text-center mb-6">
      <h1 class="text-2xl font-bold">Bulletin du 2ème Semestre</h1>
      <p>Année Scolaire 2013/2014</p> <!-- Dynamic if needed -->
      <p>Nom: {{ student.fullName }}</p>
      <p>Classe: {{ student.classe.name }}</p>
      <p>CNE: {{ student.cne }}</p>
    </div>

    <!-- Grades Table -->
    <table class="w-full border-collapse border border-gray-400 mb-6">
      <thead>
        <tr class="bg-gray-200">
          <th class="border p-2">Matières</th>
          <th class="border p-2">Coef</th>
          <th class="border p-2">Note</th>
          <th class="border p-2">Produit</th>
          <th class="border p-2">Observations</th>
        </tr>
      </thead>
      <tbody>
        {% for grade in grades %}
          <tr>
            <td class="border p-2">{{ grade.subject.name }}</td>
            <td class="border p-2">{{ grade.subject.coefficient|number_format(1) }}</td>
            <td class="border p-2">{{ grade.value|number_format(2) }}</td>
            <td class="border p-2">{{ (grade.value * grade.subject.coefficient)|number_format(2) }}</td>
            <td class="border p-2"></td> <!-- Add if needed -->
          </tr>
        {% endfor %}
        <tr class="font-bold">
          <td class="border p-2" colspan="2">Total</td>
          <td class="border p-2">{{ totalCoef|number_format(1) }}</td>
          <td class="border p-2">{{ average|number_format(2) }}</td>
          <td class="border p-2">Moyenne Générale: {{ average|number_format(2) }}/20</td>
        </tr>
      </tbody>
    </table>

    <!-- Footer -->
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p>Appréciation du Professeur Principal:</p>
        <p class="border p-4"></p> <!-- Empty for now -->
      </div>
      <div>
        <p>Visa des Parents:</p>
        <p class="border p-4"></p>
      </div>
    </div>
    <div class="text-right mt-4">
      <p>Le Directeur</p>
      <p>Signature</p>
    </div>
  </div>

<!-- Prompt for PDF -->
<script>
  window.pageInit = () => {
      window.showConfirm('Voulez-vous télécharger ce bulletin en PDF ?', () => {
          window.location.href = '{{ path('admin_student_bulletin_pdf', {id: student.id, semester: semester}) }}';
      });
  };
</script>
{% endblock %}
