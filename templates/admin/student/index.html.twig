{% extends 'base.html.twig' %}

{% block title %}Gestion des Étudiants - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Custom Scrollbar */
    .custom-scroll::-webkit-scrollbar { width: 6px; height: 6px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

    /* Animation */
    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
    
    /* Hover Effects */
    .student-row {
        transition: transform 0.2s, background-color 0.2s, box-shadow 0.2s;
    }
    .student-row:hover {
        transform: scale-[1.002];
        z-index: 10;
        box-shadow: 0 4px 20px -5px rgba(0,0,0,0.05);
        background-color: #ffffff;
    }
</style>
{% endblock %}

{% block body %}
<!-- 
    LAYOUT FIX: 
    1. h-[calc(100vh-80px)]: Calculates height based on Navbar (~80px)
    2. flex flex-col: Stacks header and table
    3. min-h-0: Crucial for allowing the nested scrollable area to work within flexbox
-->
<div class="h-[calc(100vh-80px)] bg-slate-50 text-[#0F172A] overflow-hidden relative font-sans flex flex-col p-4 md:p-6">
    
    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- 1. Header Section (Fixed Height) -->
    <div class="flex-none mb-6 animate-fade-up z-10">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-end gap-6">
            <div>
                <span class="text-[#D97706] font-bold tracking-widest uppercase text-xs mb-2 block flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-[#D97706] animate-pulse"></span>
                    Administration
                </span>
                <h1 class="text-4xl font-heading font-black text-[#0F172A] tracking-tight leading-none">
                    Gestion des Étudiants
                </h1>
            </div>

            <div class="flex flex-col md:flex-row items-center gap-4 w-full md:w-auto">
                <!-- Search Form -->
                <form method="get" class="relative group w-full md:w-80">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i class="fas fa-search text-slate-400 group-focus-within:text-[#3A86FF] transition-colors"></i>
                    </div>
                    <input type="text" name="search" value="{{ search|default('') }}" placeholder="Nom, CNE, Email..." 
                           class="w-full pl-11 pr-4 py-3 rounded-2xl border border-slate-200 bg-white/80 backdrop-blur-sm focus:ring-2 focus:ring-[#3A86FF]/20 focus:border-[#3A86FF] transition-all shadow-sm text-sm font-medium placeholder-slate-400 text-[#0F172A]">
                    {% if search %}
                        <a href="{{ path('admin_student_index') }}" class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-400 hover:text-rose-500 transition-colors">
                            <i class="fas fa-times-circle"></i>
                        </a>
                    {% endif %}
                </form>

                <a href="{{ path('admin_student_new') }}" 
                   class="w-full md:w-auto bg-[#3A86FF] hover:bg-blue-600 text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-blue-500/20 transition-all flex items-center justify-center gap-2 text-sm hover:-translate-y-0.5">
                    <i class="fa-solid fa-plus bg-white/20 rounded-lg p-1.5 text-[10px]"></i>
                    <span>Nouvel Étudiant</span>
                </a>
            </div>
        </div>
    </div>

    <!-- 2. Table Container (Flex Grow + min-h-0 to force scroll inside) -->
    <div class="flex-1 min-h-0 max-w-7xl mx-auto w-full relative z-10 animate-fade-up pb-2" style="animation-delay: 100ms;">
        
        <!-- The Floating Card -->
        <div class="h-full bg-white rounded-[2.5rem] shadow-[0_20px_60px_-15px_rgba(15,23,42,0.15)] border border-slate-100 overflow-hidden flex flex-col">
            
            <!-- Internal Scroll Area -->
            <div class="flex-1 overflow-auto custom-scroll">
                <table class="w-full text-left border-collapse">
                    
                    <!-- Sticky Header -->
                    <thead class="sticky top-0 z-20">
                        <tr class="bg-slate-50/95 backdrop-blur-md border-b border-slate-100 shadow-sm">
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest">Étudiant</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest text-center">CNE</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest">Classe</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest text-center">Statut</th>
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest text-right">Actions</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-50">
                        {% for student in students %}
                        <tr class="student-row group cursor-default">
                            <td class="py-4 px-8">
                                <div class="flex items-center gap-4">
                                    <div class="w-11 h-11 rounded-xl bg-[#0F172A] text-white flex items-center justify-center font-heading font-bold text-xs shadow-md group-hover:bg-[#3A86FF] group-hover:scale-110 transition-all duration-300">
                                        {{ student.firstName|first }}{{ student.lastName|first }}
                                    </div>
                                    <div>
                                        <div class="font-bold text-[#0F172A] text-base group-hover:text-[#3A86FF] transition-colors leading-tight">
                                            {{ student.fullName }}
                                        </div>
                                        <div class="text-[10px] font-bold text-slate-400 uppercase tracking-wide mt-0.5">{{ student.user.email }}</div>
                                    </div>
                                </div>
                            </td>

                            <td class="py-4 px-6 text-center font-mono text-xs font-bold text-slate-500">
                                {{ student.cne }}
                            </td>

                            <td class="py-4 px-6">
                                <span class="inline-flex items-center px-3 py-1 rounded-lg bg-[#3A86FF]/5 text-[#3A86FF] text-[10px] font-black uppercase tracking-wider border border-[#3A86FF]/10">
                                    {{ student.classe.name }}
                                </span>
                            </td>

                            <td class="py-4 px-6 text-center">
                                {% set statusColor = student.status == 'active' ? 'text-emerald-600 bg-emerald-50 border-emerald-100' : 'text-rose-600 bg-rose-50 border-rose-100' %}
                                <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest border {{ statusColor }}">
                                    {{ student.status }}
                                </span>
                            </td>

                            <td class="py-4 px-8 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="{{ path('admin_student_show', {id: student.id}) }}" class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-50 text-slate-400 hover:bg-[#3A86FF]/10 hover:text-[#3A86FF] transition-all" title="Voir">
                                        <i class="fa-solid fa-eye text-sm"></i>
                                    </a>
                                    <a href="{{ path('admin_student_edit', {id: student.id}) }}" class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-50 text-slate-400 hover:bg-amber-500/10 hover:text-amber-600 transition-all" title="Modifier">
                                        <i class="fa-solid fa-pen-to-square text-sm"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_student_delete', {id: student.id}) }}" class="inline" onsubmit="return confirm('Supprimer cet étudiant ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.id) }}">
                                        <button type="submit" class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-50 text-slate-400 hover:bg-rose-500/10 hover:text-rose-600 transition-all" title="Supprimer">
                                            <i class="fa-solid fa-trash-can text-sm"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="py-20 text-center">
                                <div class="flex flex-col items-center justify-center opacity-60">
                                    <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mb-4 text-slate-300 text-3xl">
                                        <i class="fas fa-search"></i>
                                    </div>
                                    <h3 class="text-xl font-heading font-bold text-[#0F172A] mb-2">Aucun étudiant</h3>
                                    <p class="text-slate-500 max-w-md text-sm">
                                        Aucun résultat ne correspond à votre recherche.
                                    </p>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Table Footer (Sticky at bottom of card) -->
            <div class="flex-none bg-slate-50 border-t border-slate-100 px-8 py-4 flex justify-between items-center text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">
                <span>Total: {{ students|length }} Étudiants</span>
                <span>CampusFlow Administration</span>
            </div>
        </div>
    </div>
</div>
{% endblock %}