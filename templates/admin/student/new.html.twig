{% extends 'base.html.twig' %}

{% block title %}Créer un Étudiant - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
</style>
{% endblock %}

{% block body %}
<div class="min-h-[calc(100vh-5rem)] bg-slate-50 text-[#0F172A] relative font-sans flex flex-col p-4 md:p-8 overflow-y-auto">
    
    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="max-w-4xl mx-auto w-full z-10">
        <!-- Header Section -->
        <div class="mb-8 animate-fade-up">
            <a href="{{ path('admin_student_index') }}" class="inline-flex items-center gap-2 text-slate-400 hover:text-[#3A86FF] transition-colors mb-4 text-xs font-bold uppercase tracking-wide group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour à la liste
            </a>

            <div class="flex items-center gap-6">
                <div class="w-16 h-16 rounded-2xl bg-[#0F172A] text-white flex items-center justify-center shadow-lg border-2 border-white/50">
                    <i class="fa-solid fa-user-plus text-xl"></i>
                </div>
                
                <div>
                    <h1 class="text-3xl md:text-4xl font-heading font-black text-[#0F172A] tracking-tight leading-none mb-1">
                        Nouvel Étudiant
                    </h1>
                    <p class="text-sm font-medium text-slate-500 uppercase tracking-widest">Création de dossier scolaire</p>
                </div>
            </div>
        </div>

        <!-- Form Card -->
        <div class="animate-fade-up" style="animation-delay: 100ms;">
            {{ form_start(form, {'attr': {'class': 'bg-white rounded-[2.5rem] shadow-[0_20px_40px_-10px_rgba(15,23,42,0.05)] border border-slate-100 p-8 md:p-10 space-y-8 relative overflow-hidden'}}) }}
                
                <!-- Decorative Top Border -->
                <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-[#3A86FF] via-[#D97706] to-[#3A86FF]"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                    <!-- Identity Section -->
                    <div class="col-span-2">
                        <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-4 flex items-center gap-3">
                            <span class="w-8 h-[1px] bg-[#D97706]/30"></span> Identité
                        </h3>
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Prénom</label>
                        {{ form_widget(form.firstName, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3.5 text-sm font-bold text-[#0F172A]', placeholder: 'Ex: Jean'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Nom</label>
                        {{ form_widget(form.lastName, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3.5 text-sm font-bold text-[#0F172A]', placeholder: 'Ex: Dupont'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Date de Naissance</label>
                        {{ form_widget(form.birthDate, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3.5 text-sm font-medium text-[#0F172A]'}}) }}
                        {{ form_errors(form.birthDate) }}
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">CNE</label>
                        {{ form_widget(form.cne, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 transition-all p-3.5 text-sm font-mono font-bold text-[#0F172A]', placeholder: 'Code National'}}) }}
                        {{ form_errors(form.cne) }}
                    </div>

                    <!-- Contact Section -->
                    <div class="col-span-2 mt-4">
                        <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-4 flex items-center gap-3">
                            <span class="w-8 h-[1px] bg-[#D97706]/30"></span> Contact & Accès
                        </h3>
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Email</label>
                        {{ form_widget(form.email, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3.5 text-sm font-medium text-[#0F172A]', placeholder: 'email@exemple.com'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Mot de passe</label>
                        {{ form_widget(form.password, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3.5 text-sm font-medium text-[#0F172A]'}}) }}
                        {{ form_errors(form.password) }}
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Téléphone</label>
                        {{ form_widget(form.phone, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3.5 text-sm font-medium text-[#0F172A]'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>

                    <div class="col-span-1">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Statut</label>
                        {{ form_widget(form.status, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3.5 text-sm font-bold text-[#0F172A]'}}) }}
                        {{ form_errors(form.status) }}
                    </div>

                    <!-- Academic Section -->
                    <div class="col-span-2 mt-4">
                        <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-4 flex items-center gap-3">
                            <span class="w-8 h-[1px] bg-[#D97706]/30"></span> Académique
                        </h3>
                    </div>

                    <div class="col-span-2">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Classe</label>
                        {{ form_widget(form.classe, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3.5 text-sm font-bold text-[#0F172A]'}}) }}
                        {{ form_errors(form.classe) }}
                    </div>

                    <div class="col-span-2">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Adresse</label>
                        {{ form_widget(form.address, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 transition-all p-3.5 text-sm font-medium text-[#0F172A]', rows: 2}}) }}
                        {{ form_errors(form.address) }}
                    </div>

                    <div class="col-span-2">
                        <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-2 ml-1">Photo de Profil</label>
                        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-slate-100 border-dashed rounded-2xl hover:border-[#3A86FF]/30 transition-colors">
                            <div class="space-y-1 text-center">
                                <i class="fa-regular fa-image text-slate-300 text-3xl mb-2"></i>
                                <div class="flex text-sm text-slate-600">
                                    {{ form_widget(form.profilePicture, {attr: {class: 'cursor-pointer font-bold text-[#3A86FF] hover:text-blue-500'}}) }}
                                </div>
                                <p class="text-[10px] text-slate-400 font-bold uppercase tracking-wider">PNG, JPG up to 2MB</p>
                            </div>
                        </div>
                        {{ form_errors(form.profilePicture) }}
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="pt-8 flex items-center justify-end gap-4 border-t border-slate-50 mt-4">
                    <a href="{{ path('admin_student_index') }}" class="px-8 py-3.5 rounded-xl text-slate-500 font-bold hover:text-[#0F172A] hover:bg-slate-50 transition-all text-sm">
                        Annuler
                    </a>
                    <button type="submit" class="bg-[#0F172A] hover:bg-black text-white px-10 py-3.5 rounded-xl font-bold shadow-lg shadow-black/10 transition-all hover:-translate-y-0.5 text-sm flex items-center gap-2">
                        <i class="fa-solid fa-check-double text-amber-500"></i>
                        Enregistrer le dossier
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

