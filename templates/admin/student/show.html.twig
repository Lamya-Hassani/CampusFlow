{% extends 'base.html.twig' %}

{% block title %}Détails de l'Étudiant - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
</style>
{% endblock %}

{% block body %}
<div class="min-h-[calc(100vh-5rem)] bg-slate-50 text-[#0F172A] relative font-sans flex flex-col p-4 md:p-8 overflow-y-auto">
    
    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto w-full z-10">
        
        <!-- Header Section -->
        <div class="mb-8 animate-fade-up">
            <a href="{{ path('admin_student_index') }}" class="inline-flex items-center gap-2 text-slate-400 hover:text-[#3A86FF] transition-colors mb-4 text-xs font-bold uppercase tracking-wide group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour à la liste
            </a>

            <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-6">
                <div class="flex items-center gap-6">
                    <!-- Profile Picture -->
                    <div class="w-24 h-24 rounded-[2rem] bg-[#0F172A] text-white flex items-center justify-center shadow-xl border-4 border-white overflow-hidden relative group">
                        {% if student.profilePicture %}
                            <img src="{{ asset(student.profilePicture) }}" alt="Photo" class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500">
                        {% else %}
                            <span class="text-3xl font-black">{{ student.firstName|first }}{{ student.lastName|first }}</span>
                        {% endif %}
                    </div>
                    
                    <div>
                        <h1 class="text-4xl md:text-5xl font-heading font-black text-[#0F172A] tracking-tight leading-none mb-1">
                            {{ student.fullName }}
                        </h1>
                        <p class="text-sm font-bold text-slate-400 uppercase tracking-widest">{{ student.user.email }}</p>
                    </div>
                </div>

                <!-- Edit Button -->
                <a href="{{ path('admin_student_edit', {id: student.id}) }}" class="group bg-white border border-slate-200 hover:border-[#3A86FF] hover:text-[#3A86FF] text-[#0F172A] px-6 py-3 rounded-2xl font-bold shadow-sm transition-all flex items-center gap-2 text-sm">
                    <i class="fa-solid fa-pen-to-square"></i>
                    <span>Modifier le profil</span>
                </a>
            </div>
        </div>

        <!-- Info Card -->
        <div class="animate-fade-up" style="animation-delay: 100ms;">
            <div class="bg-white rounded-[2.5rem] shadow-[0_20px_60px_-15px_rgba(15,23,42,0.1)] border border-slate-100 overflow-hidden relative">
                
                <!-- Decorative Top Border -->
                <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-[#D97706] via-[#3A86FF] to-[#D97706]"></div>

                <div class="p-8 md:p-12">
                    
                    <!-- 3-Column Grid -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-8">
                        
                        <!-- Col 1: Identity -->
                        <div class="space-y-6">
                            <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-4 flex items-center gap-3 border-b border-slate-100 pb-2">
                                Identité
                            </h3>
                            
                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">CNE / Matricule</span>
                                <p class="text-lg font-bold text-[#0F172A] font-mono bg-slate-50 inline-block px-2 rounded">{{ student.cne }}</p>
                            </div>

                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Date de Naissance</span>
                                <div class="flex items-center gap-2 text-[#0F172A] font-medium">
                                    <i class="fa-solid fa-cake-candles text-[#3A86FF]/60"></i>
                                    {{ student.birthDate ? student.birthDate|date('d/m/Y') : 'Non renseignée' }}
                                </div>
                            </div>
                        </div>

                        <!-- Col 2: Contact -->
                        <div class="space-y-6 lg:border-l lg:border-slate-100 lg:pl-8">
                            <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-4 flex items-center gap-3 border-b border-slate-100 pb-2">
                                Contact & Coordonnées
                            </h3>

                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Téléphone</span>
                                <div class="flex items-center gap-2 text-[#0F172A] font-medium">
                                    <i class="fa-solid fa-phone text-[#3A86FF]/60"></i>
                                    {{ student.phone ?? 'Non renseigné' }}
                                </div>
                            </div>

                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Adresse</span>
                                <div class="flex items-start gap-2 text-[#0F172A] font-medium">
                                    <i class="fa-solid fa-location-dot text-[#3A86FF]/60 mt-1"></i>
                                    <span class="leading-snug">{{ student.address ?? 'Non renseignée' }}</span>
                                </div>
                            </div>
                        </div>

                        <!-- Col 3: Academic -->
                        <div class="space-y-6 lg:border-l lg:border-slate-100 lg:pl-8">
                            <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-4 flex items-center gap-3 border-b border-slate-100 pb-2">
                                Situation Académique
                            </h3>

                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Classe Actuelle</span>
                                <span class="inline-flex items-center px-3 py-1 rounded-lg bg-[#3A86FF]/10 text-[#3A86FF] text-sm font-bold border border-[#3A86FF]/20">
                                    {{ student.classe.name }}
                                </span>
                            </div>

                            <div class="flex items-center justify-between">
                                <div>
                                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Inscrit le</span>
                                    <p class="text-[#0F172A] font-medium">{{ student.enrollmentDate|date('d/m/Y') }}</p>
                                </div>
                                <div>
                                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1 text-right">Statut</span>
                                    {% if student.status == 'active' %}
                                        <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest bg-emerald-50 text-emerald-600 border border-emerald-100 flex items-center gap-1">
                                            <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></span> Actif
                                        </span>
                                    {% else %}
                                        <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest bg-rose-50 text-rose-600 border border-rose-100">
                                            Inactif
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bulletin Action Area -->
                <div class="bg-[#0F172A] p-8 md:p-10 flex flex-col md:flex-row items-center justify-between gap-6 relative overflow-hidden">
                    <!-- Background Pattern -->
                    <div class="absolute inset-0 bg-[#3A86FF]/10 opacity-20" style="background-image: radial-gradient(#3A86FF 1px, transparent 1px); background-size: 20px 20px;"></div>
                    
                    <div class="relative z-10 text-center md:text-left">
                        <h4 class="text-xl font-bold text-white mb-1">Bulletin de Notes</h4>
                        <p class="text-slate-400 text-sm">Générez et téléchargez le relevé de notes officiel.</p>
                    </div>

                    <a href="{{ path('admin_student_bulletin', {id: student.id, semester: 1}) }}"
                       class="relative z-10 group bg-[#D97706] hover:bg-[#F59E0B] text-white px-8 py-4 rounded-xl font-bold shadow-lg shadow-amber-900/20 transition-all hover:-translate-y-1 flex items-center gap-3">
                        <i class="fa-solid fa-file-pdf text-xl"></i>
                        <span>Générer Bulletin S1</span>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}