{% extends 'base.html.twig' %}

{% block title %}Gestion des Matières - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .custom-scroll::-webkit-scrollbar { width: 6px; height: 6px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }
</style>
{% endblock %}

{% block body %}
{# Key fix: h-[calc(100vh-80px)] + overflow-hidden + flex-1 min-h-0 container => inner overflow-auto scroll works #}
<div class="h-[calc(100vh-80px)] bg-slate-50 text-[#0F172A] overflow-hidden relative font-sans flex flex-col p-4 md:p-6">

    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#0F172A]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- Header (fixed) -->
    <div class="flex-none max-w-7xl mx-auto w-full z-10 mb-6 animate-fade-up">
        <div class="flex flex-col md:flex-row justify-between items-end gap-6">
            <div>
                <span class="text-[#D97706] font-bold tracking-widest uppercase text-xs mb-2 block flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-[#D97706] animate-pulse"></span>
                    Administration
                </span>
                <h1 class="text-4xl md:text-5xl font-heading font-black text-[#0F172A] tracking-tight leading-none">
                    Gestion des Matières
                </h1>
            </div>

            <div class="flex flex-col md:flex-row items-center gap-4 w-full md:w-auto">
                <!-- Search Form -->
                <form method="get" class="relative group w-full md:w-80">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i class="fas fa-search text-slate-400 group-focus-within:text-[#D97706] transition-colors"></i>
                    </div>
                    <input type="text" name="search" value="{{ search|default('') }}" placeholder="Nom, Code de la matière..." 
                           class="w-full pl-11 pr-4 py-3 rounded-2xl border border-slate-200 bg-white/80 backdrop-blur-sm focus:ring-2 focus:ring-[#D97706]/20 focus:border-[#D97706] transition-all shadow-sm text-sm font-medium placeholder-slate-400 text-[#0F172A]">
                    {% if search %}
                        <a href="{{ path('admin_subject_index') }}" class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-400 hover:text-rose-500 transition-colors">
                            <i class="fas fa-times-circle"></i>
                        </a>
                    {% endif %}
                </form>

                <a href="{{ path('admin_subject_new') }}"
                   class="group bg-[#0F172A] hover:bg-[#D97706] text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-slate-900/10 transition-all flex items-center gap-2 text-sm hover:-translate-y-0.5">
                    <i class="fa-solid fa-plus bg-white/20 rounded-lg p-1.5 text-[10px] group-hover:rotate-90 transition-transform"></i>
                    <span>Nouvelle Matière</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Table Container (must be flex-1 + min-h-0) -->
    <div class="flex-1 min-h-0 max-w-7xl mx-auto w-full relative z-10 animate-fade-up pb-2" style="animation-delay: 100ms;">
        <div class="h-full bg-white rounded-[2.5rem] shadow-[0_20px_60px_-15px_rgba(15,23,42,0.15)] border border-slate-100 overflow-hidden flex flex-col">

            <!-- Internal Scroll Area -->
            <div class="flex-1 overflow-auto custom-scroll">
                <table class="w-full text-left border-collapse">

                    <thead class="sticky top-0 z-20">
                        <tr class="bg-slate-50/95 backdrop-blur-md border-b border-slate-100 shadow-sm">
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest">Nom du Module</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest text-center">Code</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest text-center">Coefficient</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest text-center">Charge / Statut</th>
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest text-right">Actions</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-50">
                        {% for subject in subjects %}

                            {# Color coding based on coefficient #}
                            {% if subject.coefficient >= 5 %}
                                {% set statusColor = 'text-rose-600 bg-rose-50 border-rose-100' %}
                                {% set statusIcon = 'fa-battery-full' %}
                                {% set statusLabel = 'Critique' %}
                            {% elseif subject.coefficient >= 3 %}
                                {% set statusColor = 'text-amber-600 bg-amber-50 border-amber-100' %}
                                {% set statusIcon = 'fa-battery-half' %}
                                {% set statusLabel = 'Standard' %}
                            {% else %}
                                {% set statusColor = 'text-emerald-600 bg-emerald-50 border-emerald-100' %}
                                {% set statusIcon = 'fa-battery-quarter' %}
                                {% set statusLabel = 'Léger' %}
                            {% endif %}

                            <tr class="group hover:bg-slate-50 transition-all duration-200">

                                <!-- Name -->
                                <td class="py-4 px-8">
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 rounded-xl bg-[#0F172A]/5 text-[#0F172A] flex items-center justify-center font-bold text-lg group-hover:bg-[#0F172A] group-hover:text-white transition-colors">
                                            {{ subject.name|slice(0,1)|upper }}
                                        </div>
                                        <div class="font-bold text-[#0F172A] text-sm group-hover:text-[#D97706] transition-colors">
                                            {{ subject.name }}
                                        </div>
                                    </div>
                                </td>

                                <!-- Code -->
                                <td class="py-4 px-6 text-center">
                                    <span class="font-mono text-xs font-bold text-slate-500 bg-slate-100 px-2 py-1 rounded-md border border-slate-200">
                                        {{ subject.code }}
                                    </span>
                                </td>

                                <!-- Coefficient -->
                                <td class="py-4 px-6 text-center">
                                    <span class="text-sm font-black text-[#0F172A]">{{ subject.coefficient }}</span>
                                </td>

                                <!-- Status -->
                                <td class="py-4 px-6 text-center">
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest border {{ statusColor }}">
                                        <i class="fa-solid {{ statusIcon }}"></i>
                                        {{ statusLabel }}
                                    </span>
                                </td>

                                <!-- Actions -->
                                <td class="py-4 px-8 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <a href="{{ path('admin_subject_edit', {id: subject.id}) }}"
                                           class="w-8 h-8 flex items-center justify-center rounded-lg bg-slate-50 text-slate-400 hover:bg-[#D97706]/10 hover:text-[#D97706] transition-all"
                                           title="Modifier">
                                            <i class="fa-solid fa-pen text-xs"></i>
                                        </a>

                                        <form method="post" action="{{ path('admin_subject_delete', {id: subject.id}) }}" class="inline"
                                              onsubmit="event.preventDefault(); window.showConfirm('Supprimer cette matière ?', () => this.submit());">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subject.id) }}">
                                            <button type="submit"
                                                    class="w-8 h-8 flex items-center justify-center rounded-lg bg-slate-50 text-slate-400 hover:bg-rose-50 hover:text-rose-500 transition-all"
                                                    title="Supprimer">
                                                <i class="fa-solid fa-trash text-xs"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>

                        {% else %}
                            <tr>
                                <td colspan="5" class="py-20 text-center">
                                    <div class="flex flex-col items-center justify-center opacity-50">
                                        <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mb-4 text-slate-300 text-2xl">
                                            <i class="fa-solid fa-book-open"></i>
                                        </div>
                                        <h3 class="text-lg font-bold text-[#0F172A]">
                                            {% if search %}
                                                Aucun résultat pour "{{ search }}"
                                            {% else %}
                                                Aucune matière
                                            {% endif %}
                                        </h3>
                                        <p class="text-slate-500 text-xs mt-1">
                                            {% if search %}
                                                Réessayez avec un autre terme.
                                            {% else %}
                                                Commencez par en ajouter une nouvelle.
                                            {% endif %}
                                        </p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>

                </table>
            </div>

            <!-- Footer (fixed at bottom) -->
            <div class="flex-none bg-slate-50 border-t border-slate-100 px-8 py-4 flex justify-between items-center text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">
                <span>Total: {{ subjects|length }} Modules</span>
                <div class="flex gap-4">
                    <span class="flex items-center gap-1"><i class="fa-solid fa-circle text-emerald-500 text-[6px]"></i> Léger</span>
                    <span class="flex items-center gap-1"><i class="fa-solid fa-circle text-amber-500 text-[6px]"></i> Standard</span>
                    <span class="flex items-center gap-1"><i class="fa-solid fa-circle text-rose-500 text-[6px]"></i> Critique</span>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
