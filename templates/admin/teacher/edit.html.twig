{% extends 'base.html.twig' %}

{% block title %}Modifier Enseignant - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    /* Custom Checkbox Styling */
    .custom-checkbox-wrapper {
        position: relative;
    }
    
    .subject-item {
        transition: all 0.2s;
    }
    
    .subject-item:hover {
        background-color: #FFFBEB; /* Amber-50 */
    }

    /* Custom Scrollbar for Subject List */
    .subjects-list::-webkit-scrollbar { width: 4px; }
    .subjects-list::-webkit-scrollbar-track { background: transparent; }
    .subjects-list::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 4px; }

    /* Checkbox Input Styling */
    .campus-checkbox {
        appearance: none;
        width: 1.25rem;
        height: 1.25rem;
        border: 2px solid #cbd5e1;
        border-radius: 0.375rem;
        background-color: white;
        cursor: pointer;
        position: relative;
        transition: all 0.2s;
    }
    
    .campus-checkbox:checked {
        background-color: #D97706; /* Gold */
        border-color: #D97706;
        background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 16 16' fill='white' xmlns='http://www.w3.org/2000/svg'%3e%3cpath d='M12.207 4.793a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0l-2-2a1 1 0 011.414-1.414L6.5 9.086l4.293-4.293a1 1 0 011.414 0z'/%3e%3c/svg%3e");
    }
</style>
{% endblock %}

{% block body %}
<div class="min-h-[calc(100vh-5rem)] bg-slate-50 text-[#0F172A] relative font-sans flex flex-col p-4 md:p-8 overflow-y-auto">
    
    <!-- Background Decor (Gold & Midnight) -->
    <div class="absolute -top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#0F172A]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/10 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto w-full z-10">
        <!-- Header Section -->
        <div class="mb-8 animate-fade-up">
            <a href="{{ path('admin_teacher_index') }}" class="inline-flex items-center gap-2 text-slate-400 hover:text-[#D97706] transition-colors mb-4 text-xs font-bold uppercase tracking-wide group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour à la liste
            </a>

            <div class="flex items-center gap-6">
                <!-- Profile Avatar -->
                <div class="w-20 h-20 rounded-2xl bg-[#0F172A] text-white flex items-center justify-center shadow-lg border-2 border-white/50 overflow-hidden">
                    {% if teacher.profilePicture %}
                        <img src="{{ asset(teacher.profilePicture) }}" alt="Photo" class="w-full h-full object-cover">
                    {% else %}
                        <span class="text-2xl font-black">{{ teacher.firstName|first }}{{ teacher.lastName|first }}</span>
                    {% endif %}
                </div>
                
                <div>
                    <h1 class="text-3xl md:text-4xl font-heading font-black text-[#0F172A] tracking-tight leading-none mb-1">
                        Modifier Enseignant
                    </h1>
                    <p class="text-sm font-medium text-slate-500 uppercase tracking-widest">{{ teacher.fullName }}</p>
                </div>
            </div>
        </div>

        <!-- Form Card -->
        <div class="animate-fade-up" style="animation-delay: 100ms;">
            {{ form_start(form, {'attr': {'class': 'bg-white rounded-[2.5rem] shadow-[0_20px_40px_-10px_rgba(15,23,42,0.05)] border border-slate-100 p-8 md:p-10 space-y-8 relative overflow-hidden'}}) }}
                
                <!-- Decorative Top Border -->
                <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-[#0F172A] via-[#D97706] to-[#0F172A]"></div>

                <!-- 3-COLUMN LAYOUT -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
                    
                    <!-- COLUMN 1: IDENTITÉ & PHOTO -->
                    <div class="space-y-6">
                        <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-6 flex items-center gap-3 pb-2 border-b border-slate-100">
                            Identité
                        </h3>

                        <!-- Profile Picture Input -->
                        <div class="flex flex-col items-center p-6 border-2 border-slate-100 border-dashed rounded-2xl bg-slate-50/50 hover:border-[#D97706]/30 transition-colors">
                            <div class="w-24 h-24 rounded-full overflow-hidden shadow-md mb-4 bg-white border-4 border-white">
                                {% if teacher.profilePicture %}
                                    <img src="{{ asset(teacher.profilePicture) }}" class="w-full h-full object-cover">
                                {% else %}
                                    <div class="w-full h-full flex items-center justify-center bg-slate-100 text-slate-300">
                                        <i class="fa-solid fa-camera text-3xl"></i>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="text-center w-full">
                                {{ form_widget(form.profilePicture, {attr: {class: 'block w-full text-xs text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-semibold file:bg-[#D97706]/10 file:text-[#D97706] hover:file:bg-[#D97706]/20 cursor-pointer'}}) }}
                                <p class="text-[9px] text-slate-400 font-bold uppercase tracking-wider mt-2">Max 2MB (JPG/PNG)</p>
                            </div>
                            {{ form_errors(form.profilePicture) }}
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Prénom</label>
                            {{ form_widget(form.firstName, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Nom</label>
                            {{ form_widget(form.lastName, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>

                    <!-- COLUMN 2: CONTACT & ACCÈS -->
                    <div class="space-y-6 lg:border-l lg:border-slate-100 lg:pl-10">
                        <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-6 flex items-center gap-3 pb-2 border-b border-slate-100">
                            Contact & Accès
                        </h3>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Email Professionnel</label>
                            {{ form_widget(form.email, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 transition-all p-3 text-sm font-medium text-[#0F172A]'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Téléphone</label>
                            {{ form_widget(form.phone, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 transition-all p-3 text-sm font-medium text-[#0F172A]'}}) }}
                            {{ form_errors(form.phone) }}
                        </div>

                        <div>
                            <div class="flex justify-between items-center mb-1.5 ml-1">
                                <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest">Mot de passe</label>
                                <span class="text-[9px] font-black text-slate-400 uppercase tracking-wider bg-slate-50 px-2 py-0.5 rounded">Optionnel</span>
                            </div>
                            {{ form_widget(form.password, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 transition-all p-3 text-sm font-medium text-[#0F172A]', placeholder: '••••••••'}}) }}
                            {{ form_errors(form.password) }}
                        </div>
                    </div>

                    <!-- COLUMN 3: EXPERTISE (Improved Subjects) -->
                    <div class="space-y-6 lg:border-l lg:border-slate-100 lg:pl-10">
                        <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-6 flex items-center gap-3 pb-2 border-b border-slate-100">
                            Expertise & Grade
                        </h3>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Spécialité</label>
                            {{ form_widget(form.specialty, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                            {{ form_errors(form.specialty) }}
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Grade</label>
                            {{ form_widget(form.grade, {attr: {class: 'w-full rounded-xl border-2 border-slate-100 bg-slate-50 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 transition-all p-3 text-sm font-bold text-[#0F172A]'}}) }}
                            {{ form_errors(form.grade) }}
                        </div>

                        <!-- SEARCHABLE SUBJECTS LIST -->
                        <div>
                            <label class="block text-xs font-bold text-slate-600 uppercase tracking-widest mb-1.5 ml-1">Matières Enseignées</label>
                            
                            <div class="bg-white rounded-xl border-2 border-slate-100 overflow-hidden">
                                <!-- Search Bar -->
                                <div class="relative border-b border-slate-100">
                                    <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-xs"></i>
                                    <input type="text" id="subjectSearch" placeholder="Rechercher une matière..." 
                                           class="w-full pl-9 pr-3 py-2 text-xs font-medium text-[#0F172A] border-none focus:ring-0 placeholder-slate-400 bg-slate-50/50">
                                </div>

                                <!-- Checkbox List -->
                                <div class="subjects-list max-h-48 overflow-y-auto p-2" id="subjectsContainer">
                                    {% for child in form.subjects %}
                                        <label class="subject-item flex items-center gap-3 p-2 rounded-lg cursor-pointer hover:bg-slate-50 transition-colors">
                                            {{ form_widget(child, {attr: {class: 'campus-checkbox'}}) }}
                                            <span class="text-sm font-medium text-slate-600">{{ child.vars.label }}</span>
                                        </label>
                                    {% endfor %}
                                </div>
                            </div>
                            
                            {{ form_errors(form.subjects) }}
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="pt-8 flex items-center justify-end gap-4 border-t border-slate-50 mt-4">
                    <a href="{{ path('admin_teacher_index') }}" class="px-8 py-3.5 rounded-xl text-slate-500 font-bold hover:text-[#0F172A] hover:bg-slate-50 transition-all text-sm border-2 border-transparent hover:border-slate-100">
                        Annuler
                    </a>
                    <button type="submit" class="bg-[#0F172A] hover:bg-black text-white px-10 py-3.5 rounded-xl font-bold shadow-lg shadow-slate-900/20 transition-all hover:-translate-y-0.5 text-sm flex items-center gap-2">
                        <i class="fa-solid fa-cloud-arrow-up text-[#D97706]"></i>
                        Mettre à jour le dossier
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
    // Search Functionality for Subjects
    document.getElementById('subjectSearch').addEventListener('input', function(e) {
        const searchText = e.target.value.toLowerCase();
        const items = document.querySelectorAll('.subject-item');
        
        items.forEach(item => {
            const label = item.querySelector('span').textContent.toLowerCase();
            if (label.includes(searchText)) {
                item.style.display = 'flex';
            } else {
                item.style.display = 'none';
            }
        });
    });
</script>
{% endblock %}