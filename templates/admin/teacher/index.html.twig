{% extends 'base.html.twig' %}

{% block title %}Gestion des Enseignants - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .custom-scroll::-webkit-scrollbar { width: 6px; height: 6px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up { animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards; }

    .teacher-row { transition: transform 0.2s, background-color 0.2s, box-shadow 0.2s; }
    .teacher-row:hover {
        transform: scale(1.002);
        z-index: 10;
        box-shadow: 0 4px 20px -5px rgba(0,0,0,0.05);
        background-color: #ffffff;
    }
</style>
{% endblock %}

{% block body %}
<div class="h-[calc(100vh-80px)] bg-slate-50 text-[#0F172A] overflow-hidden relative font-sans flex flex-col p-4 md:p-6">

    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-[#8B5CF6]/5 rounded-full blur-[120px] pointer-events-none"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- Header Section (fixed) -->
    <div class="flex-none mb-6 animate-fade-up z-10">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-end gap-6">
            <div>
                <span class="text-[#D97706] font-bold tracking-widest uppercase text-xs mb-2 block flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-[#D97706] animate-pulse"></span>
                    Administration
                </span>
                <h1 class="text-4xl font-heading font-black text-[#0F172A] tracking-tight leading-none">
                    Corps Enseignant
                </h1>
            </div>

            <div class="flex flex-col md:flex-row items-center gap-4 w-full md:w-auto">
                <form method="get" class="relative group w-full md:w-80">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i class="fas fa-search text-slate-400 group-focus-within:text-[#8B5CF6] transition-colors"></i>
                    </div>
                    <input type="text" name="search" value="{{ search|default('') }}" placeholder="Nom, Spécialité, Email..."
                           class="w-full pl-11 pr-4 py-3 rounded-2xl border border-slate-200 bg-white/80 backdrop-blur-sm focus:ring-2 focus:ring-[#8B5CF6]/20 focus:border-[#8B5CF6] transition-all shadow-sm text-sm font-medium placeholder-slate-400 text-[#0F172A]">
                    {% if search %}
                        <a href="{{ path('admin_teacher_index') }}" class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-400 hover:text-rose-500 transition-colors">
                            <i class="fas fa-times-circle"></i>
                        </a>
                    {% endif %}
                </form>

                <a href="{{ path('admin_teacher_new') }}"
                   class="w-full md:w-auto bg-[#0F172A] hover:bg-black text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-black/20 transition-all flex items-center justify-center gap-2 text-sm hover:-translate-y-0.5">
                    <i class="fa-solid fa-plus bg-white/10 rounded-lg p-1.5 text-[10px]"></i>
                    <span>Nouvel Enseignant</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Table Container (flex-1 + min-h-0 => enables internal scroll) -->
    <div class="flex-1 min-h-0 max-w-7xl mx-auto w-full relative z-10 animate-fade-up pb-2" style="animation-delay: 100ms;">

        <div class="h-full bg-white rounded-[2.5rem] shadow-[0_20px_60px_-15px_rgba(15,23,42,0.15)] border border-slate-100 overflow-hidden flex flex-col">

            <!-- Internal scroll area -->
            <div class="flex-1 overflow-auto custom-scroll">
                <table class="w-full text-left border-collapse">
                    <thead class="sticky top-0 z-20">
                        <tr class="bg-slate-50/95 backdrop-blur-md border-b border-slate-100 shadow-sm">
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest">Enseignant</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest">Spécialité</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest">Grade</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest text-center">Matières</th>
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest text-right">Actions</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-50">
                        {% for teacher in teachers %}
                        <tr class="teacher-row group">
                            {# keep your exact row content here (same as your current code) #}
                            <td class="py-4 px-8">
                                <div class="flex items-center gap-4">
                                    <div class="w-11 h-11 rounded-xl bg-[#0F172A] text-white flex items-center justify-center font-heading font-bold text-xs shadow-md group-hover:bg-[#8B5CF6] group-hover:scale-110 transition-all duration-300">
                                        {{ teacher.firstName|first }}{{ teacher.lastName|first }}
                                    </div>
                                    <div>
                                        <div class="font-bold text-[#0F172A] text-base group-hover:text-[#8B5CF6] transition-colors leading-tight">
                                            {{ teacher.fullName }}
                                        </div>
                                        <div class="text-[10px] font-bold text-slate-400 uppercase tracking-wide mt-0.5">{{ teacher.user.email }}</div>
                                    </div>
                                </div>
                            </td>

                            <td class="py-4 px-6 font-bold text-slate-600 text-sm">{{ teacher.specialty }}</td>

                            <td class="py-4 px-6">
                                <span class="inline-flex items-center px-3 py-1 rounded-lg bg-[#D97706]/5 text-[#D97706] text-[10px] font-black uppercase tracking-wider border border-[#D97706]/10">
                                    {{ teacher.grade }}
                                </span>
                            </td>

                            <td class="py-4 px-6 text-center">
                                <span class="bg-slate-100 text-slate-500 text-[10px] font-black px-2.5 py-1 rounded-full border border-slate-200">
                                    {{ teacher.subjects|length }} Modules
                                </span>
                            </td>

                            <td class="py-4 px-8 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="{{ path('admin_teacher_show', {id: teacher.id}) }}" class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-50 text-slate-400 hover:bg-[#8B5CF6]/10 hover:text-[#8B5CF6] transition-all" title="Voir Profile">
                                        <i class="fa-solid fa-address-card text-sm"></i>
                                    </a>
                                    <a href="{{ path('admin_teacher_edit', {id: teacher.id}) }}" class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-50 text-slate-400 hover:bg-amber-500/10 hover:text-amber-600 transition-all" title="Modifier">
                                        <i class="fa-solid fa-user-pen text-sm"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_teacher_delete', {id: teacher.id}) }}" class="inline" onsubmit="event.preventDefault(); window.showConfirm('Confirmer la suppression de cet enseignant ?', () => this.submit());">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ teacher.id) }}">
                                        <button type="submit" class="w-9 h-9 flex items-center justify-center rounded-xl bg-slate-50 text-slate-400 hover:bg-rose-500/10 hover:text-rose-600 transition-all" title="Supprimer">
                                            <i class="fa-solid fa-user-minus text-sm"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="py-20 text-center">
                                <div class="flex flex-col items-center justify-center opacity-60">
                                    <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mb-4 text-slate-300 text-3xl">
                                        <i class="fas fa-chalkboard-teacher"></i>
                                    </div>
                                    <h3 class="text-xl font-heading font-bold text-[#0F172A] mb-2">Aucun enseignant</h3>
                                    <p class="text-slate-500 max-w-md text-sm">
                                        La liste est vide ou aucun résultat ne correspond à votre recherche.
                                    </p>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Footer (stays visible) -->
            <div class="flex-none bg-slate-50 border-t border-slate-100 px-8 py-4 flex justify-between items-center text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">
                <span>Total: {{ teachers|length }} Enseignants</span>
                <span>CampusFlow</span>
            </div>
        </div>
    </div>
</div>
{% endblock %}
