{% extends 'base.html.twig' %}

{% block title %}Détails Enseignant - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
    .subjects-scroll::-webkit-scrollbar { width: 4px; }
    .subjects-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 4px; }
</style>
{% endblock %}

{% block body %}
<div class="min-h-[calc(100vh-5rem)] bg-slate-50 text-[#0F172A] relative font-sans flex flex-col p-4 md:p-8 overflow-y-auto">
    
    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto w-full z-10">
        
        <!-- Header Section -->
        <div class="mb-8 animate-fade-up">
            <a href="{{ path('admin_teacher_index') }}" class="inline-flex items-center gap-2 text-slate-400 hover:text-[#3A86FF] transition-colors mb-4 text-xs font-bold uppercase tracking-wide group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour à la liste
            </a>

            <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-6">
                <div class="flex items-center gap-6">
                    <!-- Profile Avatar -->
                    <div class="w-24 h-24 rounded-[2rem] bg-[#0F172A] text-white flex items-center justify-center shadow-xl border-4 border-white overflow-hidden relative group">
                        {% if teacher.profilePicture %}
                            <img src="{{ asset(teacher.profilePicture) }}" alt="Photo" class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500">
                        {% else %}
                            <span class="text-3xl font-black">{{ teacher.firstName|first }}{{ teacher.lastName|first }}</span>
                        {% endif %}
                    </div>
                    
                    <div>
                        <h1 class="text-4xl md:text-5xl font-heading font-black text-[#0F172A] tracking-tight leading-none mb-1">
                            {{ teacher.firstName }} {{ teacher.lastName }}
                        </h1>
                        <p class="text-sm font-bold text-[#D97706] uppercase tracking-widest flex items-center gap-2">
                            <span class="w-1.5 h-1.5 rounded-full bg-[#D97706]"></span>
                            {{ teacher.specialty }}
                        </p>
                    </div>
                </div>

                <!-- Edit Button -->
                <a href="{{ path('admin_teacher_edit', {id: teacher.id}) }}" class="group bg-white border border-slate-200 hover:border-[#3A86FF] hover:text-[#3A86FF] text-[#0F172A] px-6 py-3 rounded-2xl font-bold shadow-sm transition-all flex items-center gap-2 text-sm">
                    <i class="fa-solid fa-pen-to-square"></i>
                    <span>Modifier le profil</span>
                </a>
            </div>
        </div>

        <!-- Info Card -->
        <div class="animate-fade-up" style="animation-delay: 100ms;">
            <div class="bg-white rounded-[2.5rem] shadow-[0_20px_60px_-15px_rgba(15,23,42,0.1)] border border-slate-100 overflow-hidden relative">
                
                <!-- Decorative Top Border -->
                <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-[#D97706] via-[#3A86FF] to-[#D97706]"></div>

                <div class="p-8 md:p-12">
                    
                    <!-- 3-Column Grid -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-8">
                        
                        <!-- Col 1: Professional Info -->
                        <div class="space-y-6">
                            <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-4 flex items-center gap-3 border-b border-slate-100 pb-2">
                                Profil Professionnel
                            </h3>
                            
                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Grade</span>
                                <p class="text-lg font-bold text-[#0F172A] font-mono bg-slate-50 inline-block px-2 rounded">{{ teacher.grade }}</p>
                            </div>

                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Spécialité Principale</span>
                                <div class="flex items-center gap-2 text-[#0F172A] font-medium">
                                    <i class="fa-solid fa-shapes text-[#3A86FF]/60"></i>
                                    {{ teacher.specialty }}
                                </div>
                            </div>
                        </div>

                        <!-- Col 2: Contact -->
                        <div class="space-y-6 lg:border-l lg:border-slate-100 lg:pl-8">
                            <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-4 flex items-center gap-3 border-b border-slate-100 pb-2">
                                Coordonnées
                            </h3>

                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Email</span>
                                <div class="flex items-center gap-2 text-[#0F172A] font-medium">
                                    <i class="fa-regular fa-envelope text-[#3A86FF]/60"></i>
                                    {{ teacher.user.email }}
                                </div>
                            </div>

                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Téléphone</span>
                                <div class="flex items-center gap-2 text-[#0F172A] font-medium">
                                    <i class="fa-solid fa-phone text-[#3A86FF]/60"></i>
                                    {{ teacher.phone ?? 'Non renseigné' }}
                                </div>
                            </div>
                        </div>

                        <!-- Col 3: Academic / Subjects -->
                        <div class="space-y-6 lg:border-l lg:border-slate-100 lg:pl-8">
                            <h3 class="text-[10px] font-black text-[#D97706] uppercase tracking-[0.2em] mb-4 flex items-center gap-3 border-b border-slate-100 pb-2">
                                Enseignement
                            </h3>

                            <div class="group">
                                <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-2">Matières Enseignées</span>
                                <div class="flex flex-wrap gap-2 max-h-40 overflow-y-auto subjects-scroll">
                                    {% for subject in teacher.subjects %}
                                        <span class="inline-flex items-center px-3 py-1.5 rounded-lg bg-[#3A86FF]/5 text-[#3A86FF] text-xs font-bold border border-[#3A86FF]/10">
                                            {{ subject.name }}
                                        </span>
                                    {% else %}
                                        <span class="text-sm text-slate-400 italic">Aucune matière assignée</span>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="pt-4 border-t border-slate-50">
                                <div>
                                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide block mb-1">Total Modules</span>
                                    <p class="text-[#0F172A] font-bold text-xl">{{ teacher.subjects|length }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Schedule Action Area -->
                <div class="bg-[#0F172A] p-8 md:p-10 flex flex-col md:flex-row items-center justify-between gap-6 relative overflow-hidden">
                    <!-- Background Pattern -->
                    <div class="absolute inset-0 bg-[#3A86FF]/10 opacity-20" style="background-image: radial-gradient(#3A86FF 1px, transparent 1px); background-size: 20px 20px;"></div>
                    
                    <div class="relative z-10 text-center md:text-left">
                        <h4 class="text-xl font-bold text-white mb-1">Emploi du Temps</h4>
                        <p class="text-slate-400 text-sm">Visualisez la charge horaire et le planning hebdomadaire.</p>
                    </div>

                    <!-- Note: Update route if you have a specific teacher schedule route -->
                    <a href="{{ path('admin_teacher_planning', {id: teacher.id}) }}" class="relative z-10 group bg-[#D97706] hover:bg-[#F59E0B] text-white px-8 py-4 rounded-xl font-bold shadow-lg shadow-amber-900/20 transition-all hover:-translate-y-1 flex items-center gap-3">
                        <i class="fa-regular fa-calendar-alt text-xl"></i>
                        <span>Voir le Planning</span>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}