      box-shadow: 0 0 15px #3a86ff;
      position: relative;
    }
    
    .bot-lens::after {
      content: '';
      position: absolute;
      top: 15%;
      left: 15%;
      width: 20%;
      height: 20%;
      background: #fff;
      border-radius: 50%;
      opacity: 0.8;
      filter: blur(1px);
    }
    
    .bot-ring {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 120%;
      height: 120%;
      border: 2px solid rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      border-left-color: transparent;
      border-right-color: transparent;
      animation: spin 4s linear infinite;
    }
    
    @keyframes spin {
      100% {
        transform: translate(-50%, -50%) rotate(360deg);
      }
    }
    
    @media (hover: none) {
      #campusBot {
