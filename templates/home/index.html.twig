    .bot-body {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      background: radial-gradient(circle at 30% 30%, #ffffff, #d1d5db 40%, #4b5563 85%, #1f2937 100%);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4), inset 0 -5px 10px rgba(0, 0, 0, 0.5), inset 0 2px 5px rgba(255, 255, 255, 0.9);
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
