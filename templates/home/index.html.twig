    /* --- 3D CAMPUSBOT (The "Drone") --- */
    #campusBot {
      position: fixed;
      pointer-events: none;
      z-index: 100;
      width: 60px;
      height: 60px;
      left: -100px;
      top: -100px;
      transition: opacity 0.3s;
