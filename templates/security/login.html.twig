    {# ===== CSS ANIMATIONS ===== #}
    <style>
        .education-item {
            position: absolute;
            font-size: 2.5rem;
            opacity: 0.6;
            filter: drop-shadow(0 0 10px rgba(242, 213, 124, 0.5));
        }

        /* Books */
        .book { animation: float-book 15s infinite ease-in-out; }
        .book-1 { top: 10%; left: 15%; animation-delay: 0s; font-size: 3rem; }
        .book-2 { top: 60%; left: 85%; animation-delay: 2s; font-size: 2.8rem; }
        .book-3 { top: 80%; left: 20%; animation-delay: 4s; font-size: 3.2rem; }
        .book-4 { top: 30%; left: 75%; animation-delay: 1s; font-size: 2.5rem; }
        .book-5 { top: 50%; left: 10%; animation-delay: 3s; font-size: 2.7rem; }

        @keyframes float-book {
            0%, 100% { transform: translateY(0) rotate(0deg); opacity: 0.6; }
            25%      { transform: translateY(-40px) rotate(5deg); opacity: 0.8; }
            50%      { transform: translateY(-80px) rotate(-5deg); opacity: 0.5; }
            75%      { transform: translateY(-40px) rotate(3deg); opacity: 0.7; }
        }

        /* Diplomas */
        .diploma { animation: sway-diploma 12s infinite ease-in-out; }
        .diploma-1 { top: 20%; left: 50%; animation-delay: 0s; font-size: 3.5rem; }
        .diploma-2 { top: 70%; left: 60%; animation-delay: 2s; font-size: 3rem; }
        .diploma-3 { top: 40%; left: 90%; animation-delay: 4s; font-size: 3.2rem; }

        @keyframes sway-diploma {
            0%,100% { transform: translateX(0) translateY(0) rotate(0deg); opacity: 0.7; }
            33%     { transform: translateX(-30px) translateY(-50px) rotate(-10deg); opacity: 0.9; }
            66%     { transform: translateX(30px) translateY(-30px) rotate(10deg); opacity: 0.6; }
        }

        /* Tools */
        .tool { animation: rotate-tool 10s infinite ease-in-out; }
        .tool-1 { top: 15%; left: 35%; animation-delay: 0s; }
        .tool-2 { top: 55%; left: 25%; animation-delay: 1s; }
        .tool-3 { top: 85%; left: 75%; animation-delay: 2s; }
        .tool-4 { top: 25%; left: 80%; animation-delay: 1.5s; }
        .tool-5 { top: 65%; left: 50%; animation-delay: 2.5s; }

        @keyframes rotate-tool {
            0%,100% { transform: rotate(0deg) translateY(0); opacity: 0.6; }
            50%     { transform: rotate(180deg) translateY(-60px); opacity: 0.9; }
        }

        /* Symbols */
        .symbol { animation: pulse-symbol 8s infinite ease-in-out; }
        .symbol-1 { top: 35%; left: 5%;  animation-delay: 0s;  font-size: 2.8rem; }
        .symbol-2 { top: 75%; left: 40%; animation-delay: 1s;  font-size: 3rem; }
        .symbol-3 { top: 45%; left: 95%; animation-delay: 2s;  font-size: 2.5rem; }
        .symbol-4 { top: 10%; left: 65%; animation-delay: 1.5s;font-size: 2.7rem; }

        @keyframes pulse-symbol {
            0%,100% { transform: scale(1);   opacity: 0.5; }
            50%     { transform: scale(1.3); opacity: 1;   }
        }

        /* Formulas */
        .formula {
            position: absolute;
            font-family: 'Courier New', monospace;
            font-size: 1.8rem;
            font-weight: bold;
            color: #f2d57c;
            opacity: 0.5;
            animation: drift-formula 20s infinite ease-in-out;
            text-shadow: 0 0 15px rgba(242, 213, 124, 0.7);
        }
        .formula-1 { top: 12%; left: 25%; animation-delay: 0s; }
        .formula-2 { top: 48%; left: 70%; animation-delay: 3s; }
        .formula-3 { top: 82%; left: 35%; animation-delay: 6s; }
        .formula-4 { top: 28%; left: 88%; animation-delay: 2s; font-size: 2.5rem; }
        .formula-5 { top: 68%; left: 12%; animation-delay: 4s; font-size: 2.5rem; }

        @keyframes drift-formula {
            0%,100% { transform: translate(0,0);    opacity: 0.5; }
            25%     { transform: translate(40px,-60px); opacity: 0.8; }
            50%     { transform: translate(-20px,-120px);opacity: 0.3; }
            75%     { transform: translate(30px,-80px); opacity: 0.7; }
        }

        /* Letters */
        .letter {
            position: absolute;
            font-family: 'Arial Black', sans-serif;
            font-size: 2.5rem;
            font-weight: bold;
            color: #f2d57c;
            opacity: 0.6;
            animation: bounce-letter 6s infinite ease-in-out;
            text-shadow: 0 0 20px rgba(242, 213, 124, 0.8);
        }
        .letter-1 { top: 18%; left: 55%; animation-delay: 0s; }
        .letter-2 { top: 58%; left: 35%; animation-delay: 1s; }
        .letter-3 { top: 78%; left: 85%; animation-delay: 2s; }

        @keyframes bounce-letter {
            0%,100% { transform: translateY(0)  scale(1);   opacity: 0.6; }
            50%     { transform: translateY(-50px)scale(1.2); opacity: 1; }
        }

        /* Blob bubbles */
        @keyframes blob {
            0%,100% { transform: translate(0,0) scale(1); }
            33%     { transform: translate(50px,-70px) scale(1.2); }
            66%     { transform: translate(-30px,50px) scale(0.9); }
        }
        .animate-blob { animation: blob 12s infinite ease-in-out; }
        .animation-delay-3000 { animation-delay: 6s; }

        /* Logo bounce */
        @keyframes bounce-smooth {
            0%,100% { transform: translateY(0); }
            50%     { transform: translateY(-10px); }
        }
        .animate-bounce-smooth { animation: bounce-smooth 2.5s infinite ease-in-out; }
    </style>
</div>
