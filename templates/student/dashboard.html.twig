{% extends 'base.html.twig' %}

{% block title %}Mon Espace - CampusFlow{% endblock %}

{% block body %}
<!-- 
    THEME: Cool Professional (Student View)
    - Background: Slate-50 (#F8FAFC)
    - Text: Midnight Blue (#0F172A)
    - Accents: Gold (#D97706) & Blue (#3A86FF)
-->
<div class="min-h-screen bg-slate-50 text-[#0F172A] px-4 py-8 relative overflow-hidden font-sans">
    
    <!-- Background Elements -->
    <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- Header -->
    <div class="max-w-7xl mx-auto mb-10 relative">
        <div class="flex flex-col md:flex-row justify-between items-end gap-6">
            <div>
                <span class="text-[#D97706] font-bold tracking-widest uppercase text-sm mb-2 block">Espace Étudiant</span>
                <h1 class="text-4xl md:text-5xl font-heading font-black text-[#0F172A] tracking-tight leading-none">
                    Bonjour, <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#D97706] to-[#F59E0B]">{{ student.firstName }}</span>.
                </h1>
            </div>
            <div class="flex items-center gap-3 bg-white/50 backdrop-blur-sm px-6 py-3 rounded-full border border-[#0F172A]/5 shadow-sm">
                <div class="w-8 h-8 rounded-full bg-[#0F172A] text-white flex items-center justify-center font-bold text-xs">
                    {{ student.firstName|first }}{{ student.lastName|first }}
                </div>
                <p class="text-[#0F172A]/80 text-sm font-bold tracking-wide uppercase">{{ student.classe.name }}</p>
            </div>
        </div>
    </div>

    <!-- Main Content Container -->
    <div class="max-w-7xl mx-auto">
        
        <!-- 1. Profile & Quick Stats Row -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-5 mb-10">
            <!-- Classe -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-5">
                <div class="w-12 h-12 rounded-xl bg-[#3A86FF]/10 text-[#3A86FF] flex items-center justify-center text-xl">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Classe</p>
                    <p class="text-xl font-black text-[#0F172A]">{{ student.classe.name }}</p>
                </div>
            </div>
            <!-- CNE / ID -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-5">
                <div class="w-12 h-12 rounded-xl bg-[#D97706]/10 text-[#D97706] flex items-center justify-center text-xl">
                    <i class="fas fa-id-card"></i>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Matricule</p>
                    <p class="text-xl font-black text-[#0F172A]">{{ student.cne }}</p>
                </div>
            </div>
            <!-- Cours Aujourd'hui -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-5">
                <div class="w-12 h-12 rounded-xl bg-[#10B981]/10 text-[#10B981] flex items-center justify-center text-xl">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Aujourd'hui</p>
                    <p class="text-2xl font-black text-[#0F172A]">{{ todaysClasses|length }} <span class="text-xs font-bold text-slate-400">Cours</span></p>
                </div>
            </div>
            <!-- Dernières Notes -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-5">
                <div class="w-12 h-12 rounded-xl bg-[#8B5CF6]/10 text-[#8B5CF6] flex items-center justify-center text-xl">
                    <i class="fas fa-star"></i>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Récent</p>
                    <p class="text-2xl font-black text-[#0F172A]">{{ recentGrades|length }} <span class="text-xs font-bold text-slate-400">Notes</span></p>
                </div>
            </div>
        </div>

        <!-- 2. Main Content Grid (Schedule vs Grades) -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-10">
            
            <!-- LEFT: Today's Schedule (Larger) -->
            <div class="lg:col-span-2 bg-white rounded-[2rem] shadow-sm border border-slate-100 p-8 flex flex-col h-full relative overflow-hidden">
                <div class="flex items-center justify-between mb-8">
                    <h3 class="text-2xl font-black text-[#0F172A] tracking-tight flex items-center gap-3">
                        <span class="w-2 h-8 bg-[#3A86FF] rounded-full"></span>
                        Planning du Jour
                    </h3>
                    <a href="{{ path('student_schedule_index') }}" class="text-xs font-bold text-[#3A86FF] uppercase tracking-wide hover:underline decoration-2 underline-offset-4 flex items-center gap-2 group/all">
                        Voir Emploi Complet <i class="fas fa-arrow-right text-[10px] group-hover/all:translate-x-1 transition-transform"></i>
                    </a>
                </div>
                
                <div class="space-y-4">
                    {% for schedule in todaysClasses %}
                        {# Logic for Colors #}
                        {% set typeColor = schedule.courseType == 'Cours' ? '#F59E0B' : (schedule.courseType == 'TP' ? '#3A86FF' : '#10B981') %}
                        
                        <div class="group flex p-5 rounded-2xl bg-slate-50 border border-slate-100 hover:border-[#3A86FF]/30 hover:bg-white hover:shadow-lg transition-all cursor-default relative overflow-hidden">
                            <!-- Colored Stripe -->
                            <div class="absolute left-0 top-0 bottom-0 w-2" style="background-color: {{ typeColor }};"></div>
                            
                            <!-- Time Column -->
                            <div class="flex flex-col items-center justify-center mr-6 pr-6 border-r border-slate-200 min-w-[80px]">
                                <span class="text-xl font-black text-[#0F172A]">{{ schedule.startTime|date('H:i') }}</span>
                                <span class="text-xs font-bold text-slate-400 uppercase">{{ schedule.endTime|date('H:i') }}</span>
                            </div>

                            <!-- Info Column -->
                            <div class="flex-1">
                                <div class="flex justify-between items-start mb-1">
                                    <h4 class="text-lg font-black text-[#0F172A] group-hover:text-[#3A86FF] transition-colors">{{ schedule.subject.name }}</h4>
                                    <span class="text-[10px] font-bold uppercase px-2 py-1 rounded" style="background-color: {{ typeColor }}20; color: {{ typeColor }};">
                                        {{ schedule.courseType }}
                                    </span>
                                </div>
                                <div class="flex items-center gap-4 text-xs font-bold text-slate-500 mt-2">
                                    <span class="flex items-center gap-1"><i class="fas fa-chalkboard-teacher text-[#D97706]"></i> {{ schedule.teacher.fullName }}</span>
                                    <span class="flex items-center gap-1"><i class="fas fa-map-pin text-[#3A86FF]"></i> Salle {{ schedule.room }}</span>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="flex flex-col items-center justify-center py-16 text-center">
                            <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mb-4 text-[#10B981] text-3xl">
                                <i class="fas fa-mug-hot"></i>
                            </div>
                            <h4 class="text-lg font-bold text-[#0F172A]">Aucun cours aujourd'hui</h4>
                            <p class="text-slate-400 text-sm">Profitez de votre journée !</p>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- RIGHT: Recent Grades (Smaller) -->
            <div class="lg:col-span-1 bg-white rounded-[2rem] shadow-sm border border-slate-100 p-8 flex flex-col h-full relative overflow-hidden">
                <div class="flex items-center justify-between mb-8">
                    <h3 class="text-2xl font-black text-[#0F172A] tracking-tight flex items-center gap-3">
                        <span class="w-2 h-8 bg-[#D97706] rounded-full"></span>
                        Performance
                    </h3>
                </div>

                <div class="space-y-4 overflow-y-auto max-h-[400px] pr-1 custom-scroll">
                    {% for grade in recentGrades %}
                        {% set isGood = grade.value >= 10 %}
                        
                        <div class="p-4 rounded-2xl bg-slate-50 border border-slate-100 hover:bg-white hover:shadow-md transition-all group">
                            <div class="flex justify-between items-start mb-2">
                                <span class="text-xs font-bold text-slate-400 uppercase tracking-widest">{{ grade.type }}</span>
                                <span class="text-[10px] font-mono text-slate-400">{{ grade.createdAt|date('d/m') }}</span>
                            </div>
                            
                            <h4 class="font-bold text-[#0F172A] text-sm mb-3 group-hover:text-[#D97706] transition-colors line-clamp-1">{{ grade.subject.name }}</h4>
                            
                            <div class="flex items-center justify-between">
                                <div class="h-1.5 flex-1 bg-slate-200 rounded-full mr-4 overflow-hidden">
                                    <div class="h-full rounded-full {{ isGood ? 'bg-[#10B981]' : 'bg-[#E11D48]' }}" style="width: {{ (grade.value / 20) * 100 }}%"></div>
                                </div>
                                <span class="text-lg font-black {{ isGood ? 'text-[#10B981]' : 'text-[#E11D48]' }}">{{ grade.value }}</span>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center py-12 text-slate-400 text-sm italic">Aucune note récente.</div>
                    {% endfor %}
                </div>
                
                <div class="mt-auto pt-6 border-t border-slate-100">
                    <a href="{{ path('student_grades_index') }}" class="block w-full py-3 text-center rounded-xl border border-slate-200 text-[#0F172A] font-bold text-sm hover:bg-[#0F172A] hover:text-white transition-all uppercase tracking-wide">
                        Voir tout
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Footer -->
        <div class="mt-12 text-center pb-8">
             <p class="text-xs font-bold text-slate-400 uppercase tracking-[0.2em]">&copy; 2026 CampusFlow Espace Étudiant</p>
        </div>

    </div>
</div>

<script>
    window.pageInit = () => {
        // Simple Entrance Animation
        const elements = document.querySelectorAll('.group, h1, h3, .bg-white');
        elements.forEach((el, index) => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(15px)';
            el.style.transition = 'all 0.6s cubic-bezier(0.16, 1, 0.3, 1)';
            
            setTimeout(() => {
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            }, index * 30);
        });
    };
</script>
{% endblock %}