{% extends 'base.html.twig' %}

{% block title %}Mes Notes - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* --- Custom Scrollbar --- */
    .custom-scroll::-webkit-scrollbar { width: 6px; height: 6px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

    /* --- Animations --- */
    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
    
    .table-row-hover {
        transition: transform 0.2s, background-color 0.2s, box-shadow 0.2s;
    }
    .table-row-hover:hover {
        transform: scale-[1.005];
        z-index: 10;
        box-shadow: 0 4px 20px -5px rgba(0,0,0,0.05);
        position: relative;
    }
</style>
{% endblock %}

{% block body %}
<!-- 
    LAYOUT: Fixed Viewport
    - Page Body: Overflow Hidden
    - Content: Flex Column
    - Scroll: Inside Table Card
-->
<div class="h-[calc(100vh-80px)] bg-slate-50 text-[#0F172A] overflow-hidden relative font-sans flex flex-col p-4 md:p-8">
    
    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- ============================================
         1. HEADER SECTION (Fixed Height)
         ============================================ -->
    <div class="flex-none mb-6 z-10 animate-fade-up">
        <div class="max-w-6xl mx-auto w-full">
            <a href="{{ path('student_dashboard') }}" class="inline-flex items-center gap-2 text-slate-400 hover:text-[#3A86FF] transition-colors mb-4 text-xs font-bold uppercase tracking-wide group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour au tableau de bord
            </a>
            
            <div class="flex flex-col md:flex-row justify-between items-end gap-6">
                <div>
                    <span class="text-[#D97706] font-bold tracking-widest uppercase text-xs mb-2 block">Parcours Académique</span>
                    <h1 class="text-4xl md:text-5xl font-heading font-black text-[#0F172A] tracking-tight leading-none mb-2">
                        Relevé de <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#3A86FF] to-[#D97706]">Notes</span>
                    </h1>
                </div>
                
                <!-- Quick Stats Badge -->
                <div class="flex items-center gap-4 bg-white/60 backdrop-blur-md px-5 py-3 rounded-2xl border border-slate-200 shadow-sm">
                    <div class="flex flex-col items-end">
                        <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Total Évaluations</span>
                        <span class="text-xl font-black text-[#0F172A]">{{ grades|length }}</span>
                    </div>
                    <div class="w-10 h-10 rounded-xl bg-[#3A86FF]/10 text-[#3A86FF] flex items-center justify-center text-lg">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================
         2. SCROLLABLE TABLE CONTAINER (Flex Grow)
         ============================================ -->
    <div class="flex-1 min-h-0 w-full max-w-6xl mx-auto relative z-10 animate-fade-up delay-100 pb-2">
        
        <!-- Main Card Wrapper -->
        <div class="h-full bg-white rounded-[2.5rem] shadow-[0_20px_60px_-10px_rgba(15,23,42,0.08)] border border-slate-100 overflow-hidden flex flex-col">
            
            <!-- Internal Scroll Area -->
            <div class="flex-1 overflow-auto custom-scroll">
                <table class="w-full text-left border-collapse">
                    
                    <!-- Sticky Header -->
                    <thead class="sticky top-0 z-20">
                        <tr class="bg-slate-50/95 backdrop-blur-md border-b border-slate-100">
                            <th class="py-5 px-8 text-[10px] font-black text-slate-400 uppercase tracking-widest w-1/3">Matière</th>
                            <th class="py-5 px-6 text-[10px] font-black text-slate-400 uppercase tracking-widest">Type</th>
                            <th class="py-5 px-6 text-[10px] font-black text-slate-400 uppercase tracking-widest">Semestre</th>
                            <th class="py-5 px-6 text-[10px] font-black text-slate-400 uppercase tracking-widest text-center">Note / 20</th>
                            <th class="py-5 px-8 text-[10px] font-black text-slate-400 uppercase tracking-widest text-right">Date</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-50">
                        {% for grade in grades %}
                            {% set isFail = grade.value < 10 %}
                            {% set isTop = grade.value >= 16 %}
                            
                            <tr class="table-row-hover group cursor-default" 
                                style="animation: fadeUp 0.4s ease forwards {{ loop.index0 * 50 }}ms; opacity: 0;">
                                
                                <!-- Subject -->
                                <td class="py-4 px-8">
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 rounded-xl flex items-center justify-center text-lg shadow-sm transition-transform group-hover:rotate-12
                                            {{ isFail ? 'bg-rose-100 text-rose-500' : (isTop ? 'bg-emerald-100 text-emerald-500' : 'bg-[#3A86FF]/10 text-[#3A86FF]') }}">
                                            <i class="fas fa-book text-sm"></i>
                                        </div>
                                        <div>
                                            <span class="font-bold text-[#0F172A] text-sm block">{{ grade.subject.name }}</span>
                                            {% if isTop %}
                                                <span class="text-[9px] text-emerald-600 font-bold uppercase tracking-wide">Excellent</span>
                                            {% elseif isFail %}
                                                <span class="text-[9px] text-rose-500 font-bold uppercase tracking-wide">Attention</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                
                                <!-- Type -->
                                <td class="py-4 px-6">
                                    <span class="text-[10px] font-bold uppercase tracking-wide text-slate-500 bg-white border border-slate-200 px-2 py-1 rounded-md shadow-sm">
                                        {{ grade.type }}
                                    </span>
                                </td>
                                
                                <!-- Semester -->
                                <td class="py-4 px-6 text-xs font-bold text-slate-400 uppercase">
                                    Semestre {{ grade.semester }}
                                </td>
                                
                                <!-- Grade -->
                                <td class="py-4 px-6 text-center">
                                    <span class="inline-block px-4 py-1.5 rounded-xl font-black text-lg shadow-sm border transition-transform group-hover:scale-110
                                        {{ isFail ? 'bg-rose-50 border-rose-100 text-rose-600 animate-pulse' : 
                                           (isTop ? 'bg-emerald-50 border-emerald-100 text-emerald-600' : 'bg-slate-50 border-slate-200 text-[#0F172A]') }}">
                                        {{ grade.value }}
                                    </span>
                                </td>
                                
                                <!-- Date -->
                                <td class="py-4 px-8 text-right text-xs font-mono font-bold text-slate-400">
                                    {{ grade.createdAt|date('d M Y') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="py-20 text-center">
                                    <div class="flex flex-col items-center justify-center opacity-60">
                                        <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mb-4 text-slate-300 text-2xl">
                                            <i class="fas fa-inbox"></i>
                                        </div>
                                        <p class="font-bold text-[#0F172A]">Aucune note disponible</p>
                                        <p class="text-xs text-slate-500 mt-1">Vos évaluations s'afficheront ici.</p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <!-- Card Footer -->
            <div class="flex-none border-t border-slate-100 p-4 bg-slate-50 flex justify-between items-center text-[10px] font-bold text-slate-400 uppercase tracking-[0.2em]">
                <span>Relevé Officiel</span>
                <span>{{ "now"|date("Y") }}</span>
            </div>
        </div>
    </div>
</div>
{% endblock %}