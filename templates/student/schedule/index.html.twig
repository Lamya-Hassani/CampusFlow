{% extends 'base.html.twig' %}

{% block title %}Mon Emploi du Temps - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* --- Animations --- */
    @keyframes revealUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-reveal { opacity: 0; animation: revealUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; }
    
    /* --- Stagger Delays --- */
    .delay-100 { animation-delay: 100ms; }
    .delay-200 { animation-delay: 200ms; }
    .delay-300 { animation-delay: 300ms; }

    /* --- Custom Scrollbar (Omni-directional) --- */
    .custom-scroll::-webkit-scrollbar { width: 8px; height: 8px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }
    .custom-scroll::-webkit-scrollbar-corner { background: transparent; }
</style>
{% endblock %}

{% block body %}
<!-- 
    LAYOUT: Fixed Viewport
    - Page Body: Overflow Hidden
    - Content: Flex Column
    - Scroll: Inside Schedule Card
-->
<div class="h-[calc(100vh-80px)] bg-slate-50 text-[#0F172A] overflow-hidden relative font-sans flex flex-col p-4 md:p-8">
    
    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- ============================================
         1. HEADER SECTION (Fixed Height)
         ============================================ -->
    <div class="flex-none mb-6 z-10 animate-reveal">
        <div class="max-w-7xl mx-auto w-full">
            <a href="{{ path('student_dashboard') }}" class="inline-flex items-center gap-2 text-slate-400 hover:text-[#3A86FF] transition-colors mb-4 text-xs font-bold uppercase tracking-wide group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour au tableau de bord
            </a>
            <div class="flex flex-col md:flex-row justify-between items-end gap-6">
                <div>
                    <h1 class="text-4xl md:text-5xl font-heading font-black text-[#0F172A] tracking-tight leading-none mb-2">
                        Planning <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#D97706] to-[#F59E0B]">Hebdomadaire</span>
                    </h1>
                    <div class="flex items-center gap-3 text-sm font-medium text-slate-500">
                        <span class="bg-white/60 px-3 py-1 rounded-full border border-slate-200 shadow-sm backdrop-blur-sm">
                            <i class="fas fa-layer-group mr-1.5 text-[#3A86FF]"></i> {{ student.classe.name }}
                        </span>
                        <span>Semaine du {{ "now"|date('d M') }} au {{ "now"|date_modify("+6 days")|date('d M') }}</span>
                    </div>
                </div>
                
                <!-- Legend -->
                <div class="hidden md:flex items-center gap-4 bg-white/50 backdrop-blur-sm px-5 py-3 rounded-2xl border border-[#0F172A]/5 shadow-sm">
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-[#F59E0B]"></span>
                        <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500">CM / Cours</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-[#3A86FF]"></span>
                        <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500">TP</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-[#10B981]"></span>
                        <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500">TD / Autre</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================
         2. SCROLLABLE SCHEDULE CONTAINER (Flex Grow)
         ============================================ -->
    <div class="flex-1 min-h-0 w-full max-w-7xl mx-auto relative z-10 animate-reveal delay-100 pb-2">
        
        <!-- Main Card Wrapper -->
        <div class="h-full bg-white rounded-[2.5rem] shadow-[0_20px_60px_-10px_rgba(15,23,42,0.08)] border border-slate-100 overflow-hidden flex flex-col">
            
            <!-- Internal Scroll Area (Overflow Auto) -->
            <div class="flex-1 overflow-auto custom-scroll p-8">
                
                <!-- Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-6 min-w-[1200px] lg:min-w-0 h-full">
                    {% set days = {'Monday': 'Lundi', 'Tuesday': 'Mardi', 'Wednesday': 'Mercredi', 'Thursday': 'Jeudi', 'Friday': 'Vendredi', 'Saturday': 'Samedi'} %}
                    
                    {% for dayEnglish, dayFrench in days %}
                    {% set daySchedules = schedulesByDay[dayEnglish] ?? [] %}
                    {% set isToday = "now"|date('l') == dayEnglish %}
                    
                    <!-- Column -->
                    <div class="flex flex-col gap-4 {{ isToday ? 'relative p-2 -m-2 rounded-3xl bg-gradient-to-b from-[#F59E0B]/5 to-transparent' : '' }}">
                        
                        <!-- Day Header -->
                        <div class="text-center py-3 rounded-xl font-heading font-bold uppercase tracking-widest text-xs shadow-sm sticky top-0 z-10 transition-transform
                            {{ isToday ? 'bg-[#0F172A] text-white ring-4 ring-[#F59E0B]/20 shadow-lg' : 'bg-slate-100 text-slate-500' }}">
                            {{ dayFrench }}
                            {% if isToday %}<span class="block text-[8px] text-[#F59E0B] mt-0.5">Aujourd'hui</span>{% endif %}
                        </div>

                        <!-- Schedule Items -->
                        <div class="flex flex-col gap-3 h-full">
                            {% for schedule in daySchedules %}
                                {# 
                                   FIXED COLOR LOGIC: 
                                   Checks for 'CM' or 'Cours' -> Orange (#F59E0B)
                                   Checks for 'TP' -> Blue (#3A86FF)
                                   Checks for 'TD' or others -> Green (#10B981)
                                #}
                                {% set isCM = (schedule.courseType == 'CM' or schedule.courseType == 'Cours') %}
                                {% set isTP = (schedule.courseType == 'TP') %}
                                
                                {% set typeColor = isCM ? '#F59E0B' : (isTP ? '#3A86FF' : '#10B981') %}
                                
                                <div class="group relative bg-white p-4 rounded-2xl shadow-sm border border-slate-100 hover:border-transparent hover:shadow-[0_10px_30px_-5px_rgba(0,0,0,0.1)] transition-all duration-300 cursor-default overflow-hidden flex-grow-0 hover:-translate-y-1">
                                    
                                    <!-- Colored Stripe -->
                                    <div class="absolute left-0 top-0 bottom-0 w-1.5 transition-all group-hover:w-2" style="background-color: {{ typeColor }};"></div>
                                    
                                    <div class="pl-3">
                                        <!-- Time & Type -->
                                        <div class="flex justify-between items-start mb-2">
                                            <span class="text-[9px] font-black uppercase px-2 py-0.5 rounded border" 
                                                  style="background-color: {{ typeColor }}10; color: {{ typeColor }}; border-color: {{ typeColor }}20;">
                                                {{ schedule.courseType }}
                                            </span>
                                            <span class="text-xs font-mono font-black text-[#0F172A]">
                                                {{ schedule.startTime|date('H:i') }}
                                            </span>
                                        </div>
                                        
                                        <!-- Subject -->
                                        <h4 class="font-black text-[#0F172A] text-sm leading-tight mb-3 group-hover:text-[{{ typeColor }}] transition-colors line-clamp-2">
                                            {{ schedule.subject.name }}
                                        </h4>
                                        
                                        <!-- Details Footer -->
                                        <div class="flex items-center justify-between pt-3 border-t border-slate-50">
                                            <div class="flex items-center gap-1.5 overflow-hidden">
                                                <div class="w-5 h-5 rounded-full bg-slate-100 flex items-center justify-center text-[9px] text-slate-500 font-bold shrink-0">
                                                    {{ schedule.teacher.fullName|slice(0,1) }}
                                                </div>
                                                <p class="text-[9px] text-slate-500 font-bold uppercase truncate max-w-[50px]">{{ schedule.teacher.fullName }}</p>
                                            </div>
                                            <p class="text-[10px] text-slate-400 font-bold flex items-center gap-1">
                                                <i class="fas fa-map-pin" style="color: {{ typeColor }}"></i> {{ schedule.room }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <!-- Empty State -->
                                <div class="flex-1 rounded-2xl border-2 border-dashed border-slate-100 flex flex-col items-center justify-center text-slate-300 gap-2 min-h-[150px]">
                                    <i class="fas fa-mug-hot text-2xl opacity-50"></i>
                                    <span class="text-[10px] font-bold uppercase tracking-wide">Libre</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Card Footer -->
            <div class="flex-none border-t border-slate-100 p-4 bg-slate-50 text-center">
                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-[0.2em]">&copy; 2026 CampusFlow Espace Ã‰tudiant</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}