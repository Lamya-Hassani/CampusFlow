{% extends 'base.html.twig' %}

{% block title %}Espace Enseignant - CampusFlow{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @keyframes revealUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @keyframes revealDown {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @keyframes scaleIn {
        from { opacity: 0; transform: scale(0.9); }
        to { opacity: 1; transform: scale(1); }
    }
    .animate-reveal-up { animation: revealUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }
    .animate-reveal-down { animation: revealDown 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }
    .animate-scale-in { animation: scaleIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }

    .delay-100 { animation-delay: 100ms; }
    .delay-200 { animation-delay: 200ms; }
    .delay-300 { animation-delay: 300ms; }
    .delay-400 { animation-delay: 400ms; }
    .delay-500 { animation-delay: 500ms; }

    /* Custom Scrollbar for inner containers */
    .custom-scroll::-webkit-scrollbar { width: 5px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #E2E8F0; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #CBD5E1; }
</style>
{% endblock %}

{% block body %}
<!-- 
    THEME: Cool Professional (Admin Match) - Increased Typography
    - Background: Slate-50 (#F8FAFC)
    - Text: Midnight Blue (#0F172A)
    - Accents: Gold (#D97706) & Blue (#3A86FF)
-->
<div class="min-h-screen bg-slate-50 text-[#0F172A] px-4 py-8 relative overflow-hidden font-sans">
    
    <!-- Background Elements -->
    <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- Header -->
    <div class="max-w-7xl mx-auto mb-10 relative animate-reveal-down">
        <div class="flex flex-col md:flex-row justify-between items-end gap-6">
            <div>
                <span class="text-[#D97706] font-bold tracking-widest uppercase text-sm mb-2 block">Espace Pédagogique</span>
                <h1 class="text-5xl md:text-6xl font-heading font-black text-[#0F172A] tracking-tight leading-none">
                    Bonjour, <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#D97706] to-[#F59E0B]">{{ teacher.fullName }}</span>.
                </h1>
            </div>
            {# <div class="flex items-center gap-4">
                <a href="{{ path('teacher_profile') }}" class="group bg-[#0F172A] hover:bg-[#D97706] text-white px-6 py-3 rounded-full font-bold shadow-lg transition-all flex items-center gap-3 text-sm hover:-translate-y-0.5">
                    <i class="fas fa-user-circle text-lg group-hover:rotate-12 transition-transform duration-300"></i>
                    <span>Mon Profil</span>
                </a>
                <div class="flex items-center gap-3 bg-white/50 backdrop-blur-sm px-6 py-3 rounded-full border border-[#0F172A]/5 shadow-sm">
                    <span class="w-2.5 h-2.5 rounded-full bg-[#10B981] animate-pulse"></span>
                    <p class="text-[#0F172A]/80 text-sm font-bold tracking-wide uppercase">{{ teacher.specialty }}</p>
                </div>
            </div> #}
        </div>
    </div>

    <!-- Main Content Container -->
    <div class="max-w-7xl mx-auto">
        
        <!-- 1. KPI Row (Larger Fonts) -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-5 mb-10">
            <!-- Classes -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-5 animate-scale-in delay-100 hover:scale-[1.03] hover:shadow-xl hover:shadow-blue-500/5 transition-all duration-300">
                <div class="w-12 h-12 rounded-xl bg-[#3A86FF]/10 text-[#3A86FF] flex items-center justify-center text-xl">
                    <i class="fas fa-layer-group"></i>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Classes</p>
                    <p class="text-3xl font-black text-[#0F172A]">{{ classes|length }}</p>
                </div>
            </div>
            <!-- Matières -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-5 animate-scale-in delay-200 hover:scale-[1.03] hover:shadow-xl hover:shadow-amber-500/5 transition-all duration-300">
                <div class="w-12 h-12 rounded-xl bg-[#D97706]/10 text-[#D97706] flex items-center justify-center text-xl">
                    <i class="fas fa-shapes"></i>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Matières</p>
                    <p class="text-3xl font-black text-[#0F172A]">{{ subjects|length }}</p>
                </div>
            </div>
            <!-- Total Élèves -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-5 animate-scale-in delay-300 hover:scale-[1.03] hover:shadow-xl hover:shadow-emerald-500/5 transition-all duration-300">
                <div class="w-12 h-12 rounded-xl bg-[#10B981]/10 text-[#10B981] flex items-center justify-center text-xl">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Élèves</p>
                    {% set totalStudents = 0 %}
                    {% for cls in classes %}
                        {% set totalStudents = totalStudents + cls.students|length %}
                    {% endfor %}
                    <p class="text-3xl font-black text-[#0F172A]">{{ totalStudents }}</p>
                </div>
            </div>
            <!-- Heures -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 flex items-center gap-5 animate-scale-in delay-400 hover:scale-[1.03] hover:shadow-xl hover:shadow-purple-500/5 transition-all duration-300">
                <div class="w-12 h-12 rounded-xl bg-[#8B5CF6]/10 text-[#8B5CF6] flex items-center justify-center text-xl">
                    <i class="fas fa-clock"></i>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Heures</p>
                    <p class="text-3xl font-black text-[#0F172A]">18h</p>
                </div>
            </div>
        </div>

        <!-- 2. Info Grid (Classes & Subjects) - Taller & Larger Text -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
            
            <!-- My Classes -->
            <div class="bg-white rounded-[2rem] shadow-sm border border-slate-100 p-8 flex flex-col h-[380px] relative overflow-hidden animate-reveal-up delay-200">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-2xl font-black text-[#0F172A] tracking-tight flex items-center gap-3">
                        <span class="w-2 h-8 bg-[#3A86FF] rounded-full"></span>
                        Vos Classes
                    </h3>
                    <a href="#" class="text-xs font-bold text-[#3A86FF] uppercase tracking-wide hover:underline decoration-2 underline-offset-4">Voir tout</a>
                </div>
                
                <div class="overflow-y-auto pr-2 space-y-3 flex-grow custom-scroll">
                    {% for cls in classes %}
                    <div class="flex items-center justify-between p-4 rounded-2xl bg-slate-50 border border-slate-100 hover:bg-white hover:border-[#3A86FF]/30 hover:shadow-lg hover:shadow-blue-500/5 transition-all duration-300 cursor-pointer group">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-xl bg-[#0F172A] text-white flex items-center justify-center font-bold text-base group-hover:bg-[#3A86FF] group-hover:rotate-6 transition-all duration-300">
                                {{ cls.name|slice(0,1)|upper }}
                            </div>
                            <div>
                                <h4 class="font-bold text-[#0F172A] text-base leading-tight">{{ cls.name }}</h4>
                                <p class="text-xs text-slate-500 font-bold uppercase mt-0.5">{{ cls.students|length }} Étudiants</p>
                            </div>
                        </div>
                        <i class="fas fa-chevron-right text-xs text-slate-300 group-hover:text-[#3A86FF] group-hover:translate-x-1 transition-all"></i>
                    </div>
                    {% else %}
                    <div class="text-center py-12 text-slate-400 text-sm italic">Aucune classe.</div>
                    {% endfor %}
                </div>
            </div>

            <!-- My Subjects -->
            <div class="bg-white rounded-[2rem] shadow-sm border border-slate-100 p-8 flex flex-col h-[380px] relative overflow-hidden animate-reveal-up delay-300">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-2xl font-black text-[#0F172A] tracking-tight flex items-center gap-3">
                        <span class="w-2 h-8 bg-[#D97706] rounded-full"></span>
                        Matières
                    </h3>
                </div>

                <div class="grid grid-cols-2 gap-4 overflow-y-auto pr-1 flex-grow content-start custom-scroll">
                    {% for subject in subjects %}
                    <div class="p-4 rounded-2xl bg-slate-50 border border-slate-100 hover:border-[#D97706]/30 hover:bg-white hover:shadow-lg hover:shadow-amber-500/5 transition-all duration-300 group cursor-pointer">
                        <div class="flex justify-between items-start mb-3">
                            <i class="fas fa-book text-lg text-slate-300 group-hover:text-[#D97706] group-hover:-rotate-12 transition-all duration-300"></i>
                            <span class="text-[10px] font-bold uppercase bg-white px-2 py-1 rounded border border-slate-100 text-slate-500">Coef. {{ subject.coefficient }}</span>
                        </div>
                        <h4 class="font-bold text-[#0F172A] text-sm group-hover:text-[#D97706] transition-colors line-clamp-2 leading-snug">{{ subject.name }}</h4>
                    </div>
                    {% else %}
                    <div class="col-span-2 text-center py-12 text-slate-400 text-sm italic">Aucune matière.</div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- 3. Schedule Table (Prominent & Readable) -->
        <div class="bg-white rounded-[2.5rem] shadow-[0_20px_60px_-10px_rgba(15,23,42,0.1)] border border-slate-100 overflow-hidden mb-16 animate-reveal-up delay-500">
            <div class="px-10 py-8 border-b border-slate-100 flex flex-col md:flex-row justify-between items-center gap-4 bg-slate-50/50">
                <h3 class="text-3xl font-black text-[#0F172A] tracking-tight flex items-center gap-3">
                    <span class="w-3 h-10 bg-[#10B981] rounded-full shadow-lg shadow-emerald-200"></span>
                    Emploi du Temps
                </h3>
                <div class="flex items-center gap-4">
                    <span class="px-5 py-2.5 rounded-full bg-white border border-slate-200 text-[#0F172A] text-sm font-bold uppercase tracking-widest shadow-sm">
                        <i class="far fa-calendar-check mr-2 text-[#D97706]"></i> Semaine 42
                    </span>
                </div>
            </div>
            
            <div class="p-8">
                <!-- Grid System -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-6">
                    {% set days = {'Monday': 'Lundi', 'Tuesday': 'Mardi', 'Wednesday': 'Mercredi', 'Thursday': 'Jeudi', 'Friday': 'Vendredi', 'Saturday': 'Samedi'} %}
                    
                    {% for dayEnglish, dayFrench in days %}
                    {% set daySchedules = schedulesByDay[dayEnglish] ?? [] %}
                    
                    <div class="flex flex-col gap-4">
                        <!-- Day Header -->
                        <div class="text-center py-3 bg-[#0F172A] text-white rounded-xl font-heading font-bold uppercase tracking-widest text-xs shadow-md">
                            {{ dayFrench }}
                        </div>

                        <!-- Schedule Items Container -->
                        <div class="flex flex-col gap-3 min-h-[400px] {{ daySchedules|length == 0 ? 'bg-slate-50/50 rounded-2xl border-2 border-dashed border-slate-200/60' : '' }}">
                            {% for schedule in daySchedules %}
                                {# SUBJECT-BASED COLORS #}
                                {% set subjectColors = {
                                    'Analyse 1': '#3A86FF',
                                    'Algèbre 1': '#4361EE',
                                    'Maths discrètes': '#4895EF',
                                    'Probabilités': '#4CC9F0',
                                    'Programmation 1': '#10B981',
                                    'Python': '#06D6A0',
                                    'Structures de données': '#14B8A6',
                                    'BD 1': '#F59E0B',
                                    'BD 2': '#D97706',
                                    'Réseaux 1': '#0EA5E9',
                                    'Réseaux 2': '#0284C7',
                                    'Systèmes 1': '#64748B',
                                    'Web 1': '#F72585',
                                    'Web 2': '#E11D48',
                                    'Génie logiciel': '#7209B7',
                                    'DevOps': '#560BAD',
                                    'Architecture': '#480CA8',
                                    'IA 1': '#3F37C9',
                                    'Sécurité': '#EF4444',
                                    'Projet': '#FACC15'
                                } %}
                                
                                {% set subjectName = schedule.subject.name %}
                                {% set typeColor = subjectColors[subjectName] ?? '#3A86FF' %}
                                
                                <div class="group relative bg-white p-5 rounded-2xl shadow-sm border border-slate-100 hover:-translate-y-1 hover:shadow-lg transition-all cursor-pointer overflow-hidden flex-grow-0"
                                     style="background-color: {{ typeColor }}05;">
                                    
                                    <!-- Colored Stripe -->
                                    <div class="absolute left-0 top-0 bottom-0 w-2" style="background-color: {{ typeColor }};"></div>
                                    
                                    <div class="pl-4">
                                        <div class="flex justify-between items-start mb-3">
                                            <span class="text-[10px] font-black uppercase px-2.5 py-1 rounded" style="background-color: {{ typeColor }}20; color: {{ typeColor }};">
                                                {{ schedule.courseType }}
                                            </span>
                                            <span class="text-xs font-mono font-black text-[#0F172A] bg-slate-100 px-2 py-0.5 rounded">
                                                {{ schedule.startTime|date('H:i') }}
                                            </span>
                                        </div>
                                        
                                        <h4 class="font-black text-[#0F172A] text-base leading-tight mb-1 group-hover:text-[{{ typeColor }}] transition-colors truncate">{{ subjectName }}</h4>
                                        <div class="flex items-center justify-between mt-3 pt-3 border-t border-slate-50">
                                            <p class="text-xs text-slate-500 font-bold uppercase">{{ schedule.classe.name }}</p>
                                            <p class="text-xs text-slate-400 font-bold"><i class="fas fa-map-pin mr-1" style="color: {{ typeColor }}"></i>{{ schedule.room }}</p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        
        <!-- Footer -->
        <div class="mt-12 text-center pb-8">
             <p class="text-xs font-bold text-slate-400 uppercase tracking-[0.2em]">&copy; 2026 CampusFlow Espace Enseignant</p>
        </div>

    </div>
</div>

<!-- Entrance Animation Script removed in favor of CSS animations -->
{% endblock %}