{% extends 'base.html.twig' %}

{% block title %}
  Ajouter une note - {{ student.fullName }}
{% endblock %}

{% block body %}
  <div class="bg-campus-bg min-h-screen pb-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      
      {# HEADER - Floating Card Style #}
      <div class="relative bg-campus-gradient mt-6 rounded-[2.5rem] pt-10 pb-20 px-6 md:px-10 shadow-2xl overflow-hidden mb-8">
        <!-- Blobs -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-white opacity-5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/3 pointer-events-none"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-campus-peach opacity-20 rounded-full blur-3xl translate-y-1/3 -translate-x-1/4 pointer-events-none"></div>

        <div class="relative z-10 flex flex-col md:flex-row justify-between items-start md:items-center gap-6 animate-fade-in-up">
           <div class="flex items-center gap-4">
              <a href="{{ path('teacher_grades_student', { id: student.id }) }}" class="group flex items-center justify-center w-12 h-12 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-white hover:bg-white/20 transition-all duration-300 shadow-lg"><i class="fas fa-arrow-left text-sm group-hover:-translate-x-1 transition-transform"></i></a>
              <div>
                  <h1 class="font-heading text-3xl font-bold text-white tracking-tight">Ajouter une note</h1>
                  <p class="text-campus-sky font-medium mt-1"><i class="fas fa-user-graduate mr-2 text-campus-accent"></i>{{ student.fullName }} • {{ classe.name }}</p>
              </div>
           </div>
        </div>
      </div>

      {# FORM CARD #}
      <div class="-mt-12 relative z-20 animate-fade-in-up" style="animation-delay: 100ms;">
        <form method="post" class="bg-white rounded-2xl shadow-xl border border-slate-100 p-8 space-y-6">
          
          <div>
            <label class="block text-sm font-bold text-campus-dark mb-2">Matière</label>
            <div class="relative">
                <i class="fas fa-book absolute left-3 top-3 text-slate-400"></i>
                <select name="subject" class="w-full border border-slate-200 bg-campus-bg/50 rounded-xl px-4 py-3 pl-10 text-sm font-medium focus:bg-white focus:border-campus-primary focus:ring-2 focus:ring-teal-100 outline-none transition-all cursor-pointer appearance-none" required>
                  <option value="">Choisir une matière</option>
                  {% for subject in subjects %}
                    <option value="{{ subject.id }}">{{ subject.name }}</option>
                  {% endfor %}
                </select>
                <i class="fas fa-chevron-down absolute right-4 top-3.5 text-slate-400 text-xs pointer-events-none"></i>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-bold text-campus-dark mb-2">Type d'évaluation</label>
              <div class="relative">
                  <i class="fas fa-tag absolute left-3 top-3 text-slate-400"></i>
                  <select name="type" class="w-full border border-slate-200 bg-campus-bg/50 rounded-xl px-4 py-3 pl-10 text-sm font-medium focus:bg-white focus:border-campus-primary focus:ring-2 focus:ring-teal-100 outline-none transition-all cursor-pointer appearance-none">
                    <option value="control">Contrôle</option>
                    <option value="exam">Examen</option>
                    <option value="tp">TP</option>
                  </select>
                  <i class="fas fa-chevron-down absolute right-4 top-3.5 text-slate-400 text-xs pointer-events-none"></i>
              </div>
            </div>
            <div>
              <label class="block text-sm font-bold text-campus-dark mb-2">Semestre</label>
              <div class="relative">
                  <i class="fas fa-clock absolute left-3 top-3 text-slate-400"></i>
                  <select name="semester" class="w-full border border-slate-200 bg-campus-bg/50 rounded-xl px-4 py-3 pl-10 text-sm font-medium focus:bg-white focus:border-campus-primary focus:ring-2 focus:ring-teal-100 outline-none transition-all cursor-pointer appearance-none">
                    <option value="1">Semestre 1</option>
                    <option value="2">Semestre 2</option>
                  </select>
                  <i class="fas fa-chevron-down absolute right-4 top-3.5 text-slate-400 text-xs pointer-events-none"></i>
              </div>
            </div>
          </div>

          <div>
            <label class="block text-sm font-bold text-campus-dark mb-2">Note / 20</label>
            <div class="relative">
               <i class="fas fa-star absolute left-3 top-3 text-slate-400"></i>
               <input type="number" name="value" min="0" max="20" step="0.25" placeholder="Ex: 14.5" class="w-full md:w-48 border border-slate-200 bg-campus-bg/50 rounded-xl px-4 py-3 pl-10 text-lg font-bold text-campus-primary focus:bg-white focus:border-campus-primary focus:ring-2 focus:ring-teal-100 outline-none transition-all placeholder-slate-300" required />
            </div>
          </div>

          <div class="pt-4 flex items-center justify-end gap-3 border-t border-slate-100 mt-6">
            <a href="{{ path('teacher_grades_student', { id: student.id }) }}" class="px-6 py-3 rounded-xl border border-slate-200 text-sm font-semibold text-slate-600 hover:bg-slate-50 hover:text-slate-800 transition-colors">Annuler</a>
            <button type="submit" class="px-8 py-3 rounded-xl bg-campus-gradient text-sm font-bold text-white shadow-lg shadow-teal-900/20 hover:shadow-teal-900/40 hover:-translate-y-0.5 transition-all duration-300 flex items-center gap-2">
                <i class="fas fa-save"></i>
                Enregistrer
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
