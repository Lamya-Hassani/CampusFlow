{% extends 'base.html.twig' %}

{% block title %}
  Ajouter une note - {{ student.fullName }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    /* --- Custom Scrollbar --- */
    .custom-scroll::-webkit-scrollbar { width: 6px; height: 6px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

    /* --- Animations --- */
    @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
        animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
  </style>
{% endblock %}

{% block body %}
<!-- 
    LAYOUT: Fixed Viewport
    - Theme: Cool Professional (Midnight/Gold)
    - Scroll: Internal Form Container
-->
<div class="h-[calc(100vh-80px)] bg-slate-50 text-[#0F172A] overflow-hidden relative font-sans flex flex-col p-4 md:p-8">
    
    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- ============================================
         1. HEADER SECTION (Fixed)
         ============================================ -->
    <div class="flex-none mb-6 z-10 animate-fade-up">
        <div class="max-w-4xl mx-auto w-full">
            <!-- Back Button -->
            <a href="{{ path('teacher_grades_student', { id: student.id }) }}" class="inline-flex items-center gap-2 text-slate-400 hover:text-[#3A86FF] transition-colors mb-4 text-xs font-bold uppercase tracking-wide group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour au dossier
            </a>

            <div class="flex items-center gap-6">
                <!-- Avatar -->
                <div class="w-16 h-16 rounded-2xl bg-[#0F172A] text-white flex items-center justify-center font-heading font-bold text-xl shadow-lg border-2 border-white/50">
                    {{ student.firstName|first }}{{ student.lastName|first }}
                </div>
                
                <div>
                    <h1 class="text-3xl md:text-4xl font-heading font-black text-[#0F172A] tracking-tight leading-none mb-1">
                        Nouvelle Évaluation
                    </h1>
                    <div class="flex items-center gap-2 text-sm font-medium text-slate-500">
                        <span class="text-[#D97706] font-bold">{{ student.fullName }}</span>
                        <span class="w-1 h-1 rounded-full bg-slate-300"></span>
                        <span>{{ classe.name }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================
         2. FORM CONTAINER (Scrollable)
         ============================================ -->
    <div class="flex-1 w-full max-w-4xl mx-auto relative z-10 animate-fade-up" style="animation-delay: 100ms;">
        
        <!-- Scrollable Area -->
        <div class="h-full overflow-y-auto custom-scroll pr-2 pb-4">
            
            <form method="post" class="bg-white rounded-[2.5rem] shadow-[0_20px_40px_-10px_rgba(15,23,42,0.05)] border border-slate-100 p-6 md:p-8 space-y-6 relative overflow-hidden">
                
                <!-- Decorative Top Border -->
                <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-[#3A86FF] via-[#D97706] to-[#3A86FF]"></div>

                <!-- 1. Subject Selection -->
                <div>
                    <label class="block text-xs font-bold text-[#0F172A] uppercase tracking-widest mb-2">Matière</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fas fa-book text-slate-400 group-focus-within:text-[#3A86FF] transition-colors"></i>
                        </div>
                        <select name="subject" class="w-full bg-slate-50 border border-slate-200 text-[#0F172A] text-sm font-bold rounded-xl px-4 py-3 pl-11 focus:bg-white focus:border-[#3A86FF] focus:ring-4 focus:ring-[#3A86FF]/10 outline-none transition-all cursor-pointer appearance-none shadow-sm" required>
                            <option value="">Sélectionner le module...</option>
                            {% for subject in subjects %}
                                <option value="{{ subject.id }}">{{ subject.name }}</option>
                            {% endfor %}
                        </select>
                        <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                            <i class="fas fa-chevron-down text-xs text-slate-400"></i>
                        </div>
                    </div>
                </div>

                <!-- 2. Details Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Type -->
                    <div>
                        <label class="block text-xs font-bold text-[#0F172A] uppercase tracking-widest mb-2">Type</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <i class="fas fa-tag text-slate-400 group-focus-within:text-[#D97706] transition-colors"></i>
                            </div>
                            <select name="type" class="w-full bg-slate-50 border border-slate-200 text-[#0F172A] text-sm font-bold rounded-xl px-4 py-3 pl-11 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 outline-none transition-all cursor-pointer appearance-none shadow-sm">
                                <option value="Contrôle">Contrôle</option>
                                <option value="Examen">Examen</option>
                                <option value="TP">Travaux Pratiques</option>
                                <option value="Projet">Projet</option>
                            </select>
                            <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                                <i class="fas fa-chevron-down text-xs text-slate-400"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Semester -->
                    <div>
                        <label class="block text-xs font-bold text-[#0F172A] uppercase tracking-widest mb-2">Période</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <i class="fas fa-clock text-slate-400 group-focus-within:text-[#D97706] transition-colors"></i>
                            </div>
                            <select name="semester" class="w-full bg-slate-50 border border-slate-200 text-[#0F172A] text-sm font-bold rounded-xl px-4 py-3 pl-11 focus:bg-white focus:border-[#D97706] focus:ring-4 focus:ring-[#D97706]/10 outline-none transition-all cursor-pointer appearance-none shadow-sm">
                                <option value="1">Semestre 1</option>
                                <option value="2">Semestre 2</option>
                            </select>
                            <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                                <i class="fas fa-chevron-down text-xs text-slate-400"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 3. Grade Input (Featured) -->
                <div>
                    <label class="block text-xs font-bold text-[#0F172A] uppercase tracking-widest mb-2">Note Attribuée</label>
                    <div class="relative group max-w-xs">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fas fa-star text-slate-400 group-focus-within:text-[#F59E0B] transition-colors"></i>
                        </div>
                        <input type="number" name="value" min="0" max="20" step="0.25" placeholder="00.00" 
                               class="w-full bg-slate-50 border border-slate-200 text-[#0F172A] text-2xl font-black rounded-xl px-4 py-3 pl-12 focus:bg-white focus:border-[#F59E0B] focus:ring-4 focus:ring-[#F59E0B]/10 outline-none transition-all placeholder-slate-300 shadow-inner" required />
                        <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                            <span class="text-sm font-bold text-slate-400">/ 20</span>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="pt-6 flex items-center justify-end gap-4 border-t border-slate-100 mt-6">
                    <a href="{{ path('teacher_grades_student', { id: student.id }) }}" class="px-6 py-3 rounded-xl border border-slate-200 text-xs font-bold uppercase tracking-wider text-slate-500 hover:bg-slate-50 hover:text-[#0F172A] transition-all">
                        Annuler
                    </a>
                    <button type="submit" class="group relative px-8 py-3 bg-[#0F172A] text-white rounded-xl font-bold text-xs uppercase tracking-wider overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-0.5">
                        <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-[#3A86FF] to-[#D97706] opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                        <span class="relative flex items-center gap-2">
                            <i class="fas fa-save"></i> Enregistrer
                        </span>
                    </button>
                </div>

            </form>
            
            <!-- Spacer for bottom scroll -->
            <div class="h-4"></div>
        </div>
    </div>
</div>
{% endblock %}