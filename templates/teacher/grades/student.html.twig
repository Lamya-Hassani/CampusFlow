{% extends 'base.html.twig' %}

{% block title %}Notes de {{ student.fullName }} - CampusFlow{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    /* --- Custom Scrollbar --- */
    .custom-scroll::-webkit-scrollbar { width: 6px; height: 6px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

    /* --- Animations --- */
    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
      animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .table-row-hover {
      transition: transform 0.2s, background-color 0.2s, box-shadow 0.2s;
    }
    .table-row-hover:hover {
      transform: scale(1.005);
      z-index: 10;
      box-shadow: 0 4px 20px -5px rgba(0,0,0,0.05);
      position: relative;
    }
  </style>
{% endblock %}

{% block body %}
<div class="h-[calc(100vh-80px)] bg-slate-50 text-[#0F172A] overflow-hidden relative font-sans flex flex-col p-4 md:p-8">

    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- ============================================
         1. HEADER SECTION (Fixed Height, Non-Scrolling)
         ============================================ -->
    <div class="flex-none mb-6 z-10 animate-fade-up">
        <div class="max-w-7xl mx-auto w-full">
            <!-- Back Button -->
            <a href="{{ path('teacher_grades_students') }}"
               class="inline-flex items-center gap-2 text-slate-400 hover:text-[#3A86FF] transition-colors mb-4 text-xs font-bold uppercase tracking-wide group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour à la liste
            </a>

            <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-6">
                <div class="flex items-center gap-6">
                    <!-- Large Avatar -->
                    <div class="relative group hidden sm:block">
                        <div class="absolute -inset-1 bg-gradient-to-r from-[#D97706] to-[#3A86FF] rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
                        <div class="relative w-20 h-20 bg-white rounded-2xl flex items-center justify-center text-2xl font-bold text-[#0F172A] shadow-lg">
                            {{ student.firstName|first }}{{ student.lastName|first }}
                        </div>
                    </div>

                    <div>
                        <h1 class="text-3xl md:text-5xl font-heading font-black text-[#0F172A] tracking-tight leading-none mb-2">
                            {{ student.fullName }}
                        </h1>
                        <div class="flex items-center gap-3 text-xs md:text-sm font-medium text-slate-500">
                            <span class="flex items-center gap-1.5 bg-white/60 px-3 py-1 rounded-full border border-slate-200 shadow-sm backdrop-blur-sm">
                                <i class="fas fa-id-card text-[#D97706]"></i> {{ student.cne }}
                            </span>
                            <span class="flex items-center gap-1.5 bg-white/60 px-3 py-1 rounded-full border border-slate-200 shadow-sm backdrop-blur-sm">
                                <i class="fas fa-layer-group text-[#3A86FF]"></i> {{ student.classe.name }}
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Add Grade Button -->
                <a href="{{ path('teacher_grades_add_for_student', { id: student.id }) }}"
                   class="group relative inline-flex items-center gap-3 px-6 py-3 bg-[#0F172A] text-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-[#3A86FF] to-[#D97706] opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                    <span class="relative font-bold text-xs uppercase tracking-widest flex items-center gap-2">
                        <i class="fas fa-plus"></i> Nouvelle Note
                    </span>
                </a>
            </div>
        </div>
    </div>

    <!-- ============================================
         2. MAIN CONTENT (Flex Grow - Grid Layout)
         ============================================ -->
    <div class="flex-1 min-h-0 max-w-7xl mx-auto w-full grid grid-cols-1 lg:grid-cols-4 gap-6 animate-fade-up" style="animation-delay: 100ms;">

        <!-- SIDEBAR STATS -->
        <div class="lg:col-span-1 min-h-0 flex flex-col gap-4">
            <!-- Total Grades -->
            <div class="bg-white p-5 rounded-[2rem] shadow-[0_10px_30px_rgba(15,23,42,0.03)] border border-slate-100 hover:border-[#3A86FF]/30 transition-all hover:shadow-md group">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Évaluations</span>
                    <div class="w-8 h-8 rounded-full bg-[#D97706]/10 flex items-center justify-center text-[#D97706] group-hover:scale-110 transition-transform">
                        <i class="fas fa-star text-xs"></i>
                    </div>
                </div>
                <p class="text-3xl font-black text-[#0F172A]">{{ grades|length }}</p>
            </div>

            <!-- Average -->
            <div class="bg-white p-5 rounded-[2rem] shadow-[0_10px_30px_rgba(15,23,42,0.03)] border border-slate-100 hover:border-[#3A86FF]/30 transition-all hover:shadow-md group">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Moyenne</span>
                    <div class="w-8 h-8 rounded-full bg-[#3A86FF]/10 flex items-center justify-center text-[#3A86FF] group-hover:scale-110 transition-transform">
                        <i class="fas fa-chart-line text-xs"></i>
                    </div>
                </div>
                {% set sum = 0 %}
                {% for g in grades %}{% set sum = sum + g.value %}{% endfor %}
                <p class="text-3xl font-black text-[#0F172A]">
                    {{ grades|length > 0 ? (sum / grades|length)|number_format(2) : '--' }}
                </p>
            </div>
        </div>

        <!-- TABLE CARD -->
        <div class="lg:col-span-3 min-h-0 bg-white rounded-[2.5rem] shadow-[0_20px_40px_-10px_rgba(15,23,42,0.05)] border border-slate-100 overflow-hidden flex flex-col">
            {# IMPORTANT: Scroll wrapper must be flex-1 min-h-0 overflow-auto #}
            <div class="flex-1 min-h-0 overflow-auto custom-scroll">
                <table class="w-full text-left border-collapse">

                    <thead class="sticky top-0 z-20">
                        <tr class="bg-slate-50/95 backdrop-blur-md border-b border-slate-100">
                            <th class="py-5 px-8 text-[10px] font-black text-slate-400 uppercase tracking-widest w-1/3">Matière</th>
                            <th class="py-5 px-6 text-[10px] font-black text-slate-400 uppercase tracking-widest">Type</th>
                            <th class="py-5 px-6 text-[10px] font-black text-slate-400 uppercase tracking-widest">Semestre</th>
                            <th class="py-5 px-6 text-[10px] font-black text-slate-400 uppercase tracking-widest text-center">Note / 20</th>
                            <th class="py-5 px-8 text-[10px] font-black text-slate-400 uppercase tracking-widest text-right">Date</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-50">
                        {% for grade in grades %}
                            {% set isFail = grade.value < 10 %}
                            {% set isTop = grade.value >= 16 %}

                            <tr class="table-row-hover group cursor-default"
                                style="animation: fadeUp 0.4s ease forwards {{ loop.index0 * 50 }}ms; opacity: 0;">

                                <td class="py-4 px-8">
                                    <div class="flex items-center gap-4">
                                        <div class="w-8 h-8 rounded-lg flex items-center justify-center text-xs shadow-sm transition-transform group-hover:rotate-6
                                            {{ isFail ? 'bg-rose-100 text-rose-500' : (isTop ? 'bg-emerald-100 text-emerald-500' : 'bg-[#3A86FF]/10 text-[#3A86FF]') }}">
                                            <i class="fas fa-book"></i>
                                        </div>
                                        <span class="font-bold text-[#0F172A] text-sm">{{ grade.subject.name }}</span>
                                    </div>
                                </td>

                                <td class="py-4 px-6">
                                    <span class="text-[10px] font-bold uppercase tracking-wide text-slate-500 bg-white border border-slate-200 px-2 py-1 rounded-md">
                                        {{ grade.type }}
                                    </span>
                                </td>

                                <td class="py-4 px-6 text-sm font-bold text-slate-400">S{{ grade.semester }}</td>

                                <td class="py-4 px-6 text-center">
                                    <span class="inline-block px-3 py-1 rounded-lg font-black text-base shadow-sm border transition-transform group-hover:scale-110
                                        {{ isFail ? 'bg-rose-50 border-rose-100 text-rose-600 animate-pulse' :
                                           (isTop ? 'bg-emerald-50 border-emerald-100 text-emerald-600' : 'bg-slate-100 border-slate-200 text-[#0F172A]') }}">
                                        {{ grade.value }}
                                    </span>
                                </td>

                                <td class="py-4 px-8 text-right text-xs font-mono font-bold text-slate-400">
                                    {{ grade.createdAt|date('d/m/Y') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="py-20 text-center">
                                    <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-300 text-2xl">
                                        <i class="fas fa-inbox"></i>
                                    </div>
                                    <p class="text-slate-400 font-medium text-sm">Aucune note enregistrée pour le moment.</p>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Table Footer -->
            <div class="flex-none bg-slate-50 border-t border-slate-100 px-8 py-3 flex justify-between items-center text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                <span>Dossier Académique</span>
                <span>{{ "now"|date("Y") }}</span>
            </div>
        </div>
    </div>
</div>

<script>
  window.pageInit = () => {};
</script>
{% endblock %}
