{% extends 'base.html.twig' %}

{% block title %}
  Mes Étudiants - CampusFlow
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .custom-scroll::-webkit-scrollbar { width: 6px; height: 6px; }
    .custom-scroll::-webkit-scrollbar-track { background: transparent; }
    .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-up {
      animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .student-row {
      transition: transform 0.2s, background-color 0.2s, box-shadow 0.2s;
    }
    .student-row:hover {
      transform: scale(1.002);
      z-index: 10;
      box-shadow: 0 4px 20px -5px rgba(0,0,0,0.05);
      position: relative;
    }
  </style>
{% endblock %}

{% block body %}
<div class="h-[calc(100vh-80px)] bg-slate-50 text-[#0F172A] overflow-hidden relative font-sans flex flex-col p-4 md:p-8">

    <!-- Background Decor -->
    <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-[#3A86FF]/5 rounded-full blur-[120px] pointer-events-none"></div>
    <div class="absolute bottom-0 right-0 w-[40%] h-[40%] bg-[#D97706]/5 rounded-full blur-[120px] pointer-events-none"></div>

    <!-- Header -->
    <div class="flex-none mb-6 animate-fade-up z-10">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-end gap-6">

            <div>
                <span class="text-[#D97706] font-bold tracking-widest uppercase text-xs mb-2 block flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-[#D97706] animate-pulse"></span>
                    Gestion de Classe
                </span>
                <h1 class="text-4xl md:text-5xl font-heading font-black text-[#0F172A] tracking-tight leading-none">
                    Mes Étudiants
                </h1>
            </div>

            <div class="w-full md:w-auto">
                <form method="get" action="{{ path('teacher_grades_students') }}" class="relative group">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i class="fas fa-search text-slate-400 group-focus-within:text-[#3A86FF] transition-colors"></i>
                    </div>
                    <input type="text" name="q" value="{{ query|default('') }}" placeholder="Rechercher un nom, email..."
                           class="w-full md:w-80 pl-11 pr-4 py-3 rounded-2xl border border-slate-200 bg-white/80 backdrop-blur-sm focus:ring-2 focus:ring-[#3A86FF]/20 focus:border-[#3A86FF] transition-all shadow-sm text-sm font-medium placeholder-slate-400 text-[#0F172A]">
                </form>
            </div>
        </div>
    </div>

    <!-- TABLE AREA (must be flex-1 + min-h-0) -->
    <div class="flex-1 min-h-0 max-w-7xl mx-auto w-full relative z-10 animate-fade-up" style="animation-delay: 100ms;">
        <div class="h-full bg-white rounded-[2.5rem] shadow-[0_20px_40px_-10px_rgba(15,23,42,0.05)] border border-slate-100 overflow-hidden flex flex-col">

            <!-- Internal Scroll Area (must be flex-1 + min-h-0) -->
            <div class="flex-1 min-h-0 overflow-auto custom-scroll">
                <table class="w-full text-left border-collapse">
                    <thead class="sticky top-0 z-20">
                        <tr class="bg-slate-50/95 backdrop-blur-md border-b border-slate-100 shadow-sm">
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest w-1/3">Identité</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest text-center">Classe</th>
                            <th class="py-5 px-6 text-xs font-black text-slate-400 uppercase tracking-widest">Contact</th>
                            <th class="py-5 px-8 text-xs font-black text-slate-400 uppercase tracking-widest text-right">Actions</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-50">
                        {% for info in studentsInfo %}
                            {% set student = info.student %}
                            <tr class="student-row group cursor-default">
                                <td class="py-4 px-8">
                                    <div class="flex items-center gap-4">
                                        <div class="w-12 h-12 rounded-xl bg-[#0F172A] text-white flex items-center justify-center font-heading font-bold text-sm shadow-md group-hover:bg-[#3A86FF] group-hover:scale-110 transition-all duration-300">
                                            {{ student.firstName|first }}{{ student.lastName|first }}
                                        </div>
                                        <div>
                                            <div class="font-bold text-[#0F172A] text-base group-hover:text-[#3A86FF] transition-colors">
                                                {{ student.fullName }}
                                            </div>
                                            <div class="text-[10px] font-bold text-slate-400 uppercase tracking-wide">ID: {{ student.id }}</div>
                                        </div>
                                    </div>
                                </td>

                                <td class="py-4 px-6 text-center">
                                    <span class="inline-flex items-center px-3 py-1 rounded-lg bg-[#D97706]/10 text-[#D97706] text-xs font-bold border border-[#D97706]/20 shadow-sm">
                                        {{ info.classe.name }}
                                    </span>
                                </td>

                                <td class="py-4 px-6">
                                    <div class="flex items-center gap-2 text-sm font-medium text-slate-500">
                                        <i class="far fa-envelope text-slate-300"></i>
                                        {{ student.user.email }}
                                    </div>
                                </td>

                                <td class="py-4 px-8 text-right">
                                    <a href="{{ path('teacher_grades_student', { id: student.id }) }}"
                                       class="inline-flex items-center gap-2 px-5 py-2 rounded-xl border border-slate-200 text-[#0F172A] font-bold text-xs uppercase tracking-wide hover:bg-[#0F172A] hover:text-white hover:border-[#0F172A] transition-all duration-200 shadow-sm">
                                        Voir Notes
                                        <i class="fas fa-arrow-right text-[10px] opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-transform"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="py-20 text-center">
                                    <div class="flex flex-col items-center justify-center opacity-60">
                                        <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mb-4 text-slate-300 text-3xl">
                                            <i class="fas fa-search"></i>
                                        </div>
                                        <h3 class="text-xl font-heading font-bold text-[#0F172A] mb-2">Aucun résultat</h3>
                                        <p class="text-slate-500 max-w-md text-sm">
                                            {% if query is not empty %}
                                                Nous n'avons trouvé aucun étudiant correspondant à « <span class="font-bold text-[#0F172A]">{{ query }}</span> ».
                                            {% else %}
                                                Votre liste d'étudiants est vide pour le moment.
                                            {% endif %}
                                        </p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="flex-none bg-slate-50 border-t border-slate-100 px-8 py-3 flex justify-between items-center text-xs font-bold text-slate-400 uppercase tracking-widest">
                <span>Total: {{ studentsInfo|length }} Étudiants</span>
                <span>CampusFlow</span>
            </div>

        </div>
    </div>

</div>

<script>
  window.pageInit = function() {};
</script>
{% endblock %}
