{% extends 'base.html.twig' %}

{% block title %}
  Mes étudiants - CampusFlow
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .custom-scroll::-webkit-scrollbar {
      height: 6px;
      width: 6px;
    }
    .custom-scroll::-webkit-scrollbar-track {
      background: transparent;
    }
    .custom-scroll::-webkit-scrollbar-thumb {
      background-color: #cbd5e1;
      border-radius: 10px;
    }
    
    .student-row {
      opacity: 0;
      transform: translateY(10px);
      transition: all 0.3s ease-out;
    }
    
    .student-row.show {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
{% endblock %}

{% block body %}
<div class="min-h-screen bg-campus-bg py-10 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- HEADER SECTION -->
        <div class="flex flex-col md:flex-row justify-between items-center mb-10 gap-6 animate-fade-in-up">
            <div>
                <h1 class="text-3xl md:text-4xl font-heading font-extrabold text-campus-dark tracking-tight mb-2">
                    Mes Étudiants
                </h1>
                <p class="text-slate-500 text-lg">
                    Gérez vos classes et les notes de vos élèves.
                </p>
                <div class="h-1.5 w-24 bg-campus-gradient rounded-full mt-4"></div>
            </div>

            <div class="flex items-center bg-white rounded-2xl shadow-lg p-1.5 border border-slate-100 w-full md:w-auto">
                <form method="get" action="{{ path('teacher_grades_students') }}" class="flex w-full md:w-auto">
                    <div class="relative w-full md:w-80">
                        <i class="fas fa-search absolute left-4 top-3.5 text-slate-400"></i>
                        <input type="text" name="q" value="{{ query|default('') }}" placeholder="Rechercher un étudiant..." 
                               class="w-full pl-12 pr-4 py-3 rounded-xl border-none focus:ring-0 text-slate-700 placeholder-slate-400 bg-transparent font-medium">
                    </div>
                    <button type="submit" class="bg-campus-primary text-white p-3.5 rounded-xl shadow-lg hover:shadow-xl hover:bg-opacity-90 transition-all duration-300">
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </form>
            </div>
        </div>


        <!-- STUDENTS LIST -->
        <div class="bg-white rounded-3xl shadow-xl border border-slate-100 overflow-hidden animate-fade-in-up" style="animation-delay: 0.2s;">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-campus-bg border-b border-slate-100">
                            <th class="py-5 px-6 text-xs font-bold uppercase tracking-wider text-slate-500">Nom Complet</th>
                            <th class="py-5 px-6 text-xs font-bold uppercase tracking-wider text-slate-500">Classe</th>
                            <th class="py-5 px-6 text-xs font-bold uppercase tracking-wider text-slate-500">Email</th>
                            <th class="py-5 px-6 text-xs font-bold uppercase tracking-wider text-slate-500 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-50" id="studentsTableBody">
                        {% for info in studentsInfo %}
                        {% set student = info.student %}
                        <tr class="student-row hover:bg-campus-bg/50 transition-colors duration-200 group">
                            <td class="py-4 px-6">
                                <div class="flex items-center gap-4">
                                    <div class="w-10 h-10 rounded-full bg-campus-teal/10 flex items-center justify-center text-campus-teal font-bold text-sm shadow-sm group-hover:scale-110 transition-transform">
                                        {{ student.firstName|first }}{{ student.lastName|first }}
                                    </div>
                                    <span class="font-bold text-campus-dark">{{ student.fullName }}</span>
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <span class="px-3 py-1 rounded-full bg-campus-bg text-campus-dark text-xs font-bold border border-slate-200">
                                    {{ info.classe.name }}
                                </span>
                            </td>
                            <td class="py-4 px-6 text-sm text-slate-500">
                                {{ student.user.email }}
                            </td>
                            <td class="py-4 px-6 text-right">
                                <a href="{{ path('teacher_grades_student', { id: student.id }) }}" 
                                   class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-campus-bg text-campus-teal font-semibold text-sm hover:bg-campus-primary hover:text-white transition-all duration-300 shadow-sm hover:shadow-md">
                                    <span>Voir Notes</span>
                                    <i class="fas fa-arrow-right text-xs"></i>
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4" class="p-10 text-center text-slate-400">
                                <i class="fas fa-inbox text-4xl mb-3 opacity-50"></i>
                                <p>
                                  {% if query is not empty %}
                                    Aucun résultat pour « {{ query }} ».
                                  {% else %}
                                    Aucun étudiant associé à vos cours.
                                  {% endif %}
                                </p>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    window.pageInit = function() {
        // Animation for table rows
        const rows = document.querySelectorAll('.student-row')
        rows.forEach((row, index) => {
            setTimeout(() => row.classList.add('show'), index * 100)
        })
    }
</script>
{% endblock %}
