{% extends 'base.html.twig' %}

{% block title %}Mon profil - CampusFlow{% endblock %}

{% block body %}
<div class="min-h-screen bg-campus-bg px-4 py-10 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-heading font-bold text-campus-dark mb-8">Mon profil</h1>

        <div class="bg-white rounded-2xl shadow-xl border border-campus-bg/50 p-8">
            <div class="mb-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <p class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-1">Nom complet</p>
                    <p class="text-lg font-semibold text-campus-dark">{{ teacher.fullName }}</p>
                </div>
                <div>
                    <p class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-1">Spécialité</p>
                    <p class="text-lg font-semibold text-campus-primary">{{ teacher.specialty }}</p>
                </div>
            </div>

            <hr class="border-slate-100 my-8">

            {{ form_start(form) }}
                <div class="space-y-6">
                    <div>
                        {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-bold text-campus-dark mb-2'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-xl border-slate-200 shadow-sm focus:border-campus-primary focus:ring focus:ring-campus-primary/20 transition-all px-4 py-3'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-bold text-campus-dark mb-2'}}) }}
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'mt-1 block w-full rounded-xl border-slate-200 shadow-sm focus:border-campus-primary focus:ring focus:ring-campus-primary/20 transition-all px-4 py-3'}}) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                        <div>
                            {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-bold text-campus-dark mb-2'}}) }}
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'mt-1 block w-full rounded-xl border-slate-200 shadow-sm focus:border-campus-primary focus:ring focus:ring-campus-primary/20 transition-all px-4 py-3'}}) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                    </div>
                </div>

                <div class="mt-10 flex justify-end">
                    <button type="submit"
                            class="bg-campus-gradient text-white font-bold text-sm px-8 py-3 rounded-xl shadow-lg hover:shadow-teal-900/20 hover:-translate-y-0.5 transition-all duration-300">
                        Enregistrer les modifications
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
